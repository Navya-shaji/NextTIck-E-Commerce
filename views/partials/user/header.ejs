<!DOCTYPE html>
<html lang="en">

<head>
  <title>NexTick</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <link
    href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400;500;600;700&family=Outfit:wght@300;400;500;600;700;800;900&family=Inter:wght@300;400;500;600;700&display=swap"
    rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <link rel="stylesheet" href="/css/open-iconic-bootstrap.min.css">
  <link rel="stylesheet" href="/css/animate.css">
  <link rel="stylesheet" href="/css/owl.carousel.min.css">
  <link rel="stylesheet" href="/css/owl.theme.default.min.css">
  <link rel="stylesheet" href="/css/magnific-popup.css">
  <link rel="stylesheet" href="/css/aos.css">
  <link rel="stylesheet" href="/css/ionicons.min.css">
  <link rel="stylesheet" href="/css/bootstrap-datepicker.css">
  <link rel="stylesheet" href="/css/jquery.timepicker.css">
  <link rel="stylesheet" href="/css/flaticon.css">
  <link rel="stylesheet" href="/css/icomoon.css">
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/styles/header.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    /* Premium Minimalist Header */
    :root {
      --header-bg: #ffffff;
      --header-text: #000000;
      --header-accent: #c5a059;
      --header-font: 'Cinzel', serif;
      --nav-font: 'Outfit', sans-serif;
      --body-font: 'Inter', sans-serif;
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    .main-header {
      background: var(--header-bg);
      border-bottom: 1px solid #eeeeee;
      padding: 15px 0;
      position: sticky;
      top: 0;
      z-index: 1000;
      width: 100%;
    }

    .header-container {
      max-width: 1400px;
      margin: 0 auto;
      padding: 0 40px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    /* Logo Styling */
    .brand-logo {
      text-decoration: none;
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .brand-logo h1 {
      font-family: var(--header-font);
      font-size: 24px;
      font-weight: 800;
      color: var(--header-text);
      letter-spacing: -0.02em;
      text-transform: uppercase;
      margin: 0;
    }

    /* Navigation Menu */
    .main-nav {
      flex: 1;
      display: flex;
      justify-content: center;
    }

    .nav-menu {
      display: flex;
      list-style: none;
      gap: 35px;
      margin: 0;
      padding: 0;
    }

    .nav-link {
      text-decoration: none;
      color: var(--header-text);
      font-family: var(--nav-font);
      font-size: 13px;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 1px;
      padding: 8px 0;
      transition: color 0.3s;
      position: relative;
    }

    .nav-link:hover {
      color: var(--header-accent);
    }

    .nav-link::after {
      content: '';
      position: absolute;
      bottom: 0;
      left: 0;
      width: 0;
      height: 1.5px;
      background: var(--header-accent);
      transition: width 0.3s cubic-bezier(0.16, 1, 0.3, 1);
    }

    .nav-link:hover::after {
      width: 100%;
    }

    /* Action Icons */
    .header-actions {
      display: flex;
      align-items: center;
      gap: 25px;
    }

    .action-icon {
      color: var(--header-text);
      font-size: 18px;
      text-decoration: none;
      position: relative;
      transition: transform 0.2s;
    }

    /* Header Search */
    .header-search {
      flex: 0 0 300px;
      margin: 0 40px;
      position: relative;
    }

    .search-input {
      width: 100%;
      padding: 8px 15px 8px 35px;
      border: 1px solid #eeeeee;
      border-radius: 4px;
      font-size: 13px;
      font-family: var(--nav-font);
      transition: border-color 0.3s;
    }

    .search-input:focus {
      outline: none;
      border-color: var(--header-accent);
    }

    .search-icon {
      position: absolute;
      left: 12px;
      top: 50%;
      transform: translateY(-50%);
      font-size: 13px;
      color: #999;
    }

    .action-icon:hover {
      color: var(--header-accent);
      transform: translateY(-2px);
    }

    .user-name-text {
      font-size: 13px;
      font-weight: 500;
      margin-left: 5px;
      color: var(--header-text);
      display: inline-block;
      vertical-align: middle;
      max-width: 80px;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
      font-family: var(--header-font);
    }

    .badge {
      position: absolute;
      top: -8px;
      right: -10px;
      background: var(--header-accent);
      color: white;
      font-size: 9px;
      font-weight: 700;
      width: 16px;
      height: 16px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    /* Dropdown - Ultra Clean */
    .dropdown {
      position: relative;
    }

    .dropdown-menu {
      position: absolute;
      top: 100%;
      right: 0;
      background: white;
      min-width: 180px;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
      border: 1px solid #f0f0f0;
      border-radius: 8px;
      padding: 10px 0;
      opacity: 0;
      visibility: hidden;
      transform: translateY(10px);
      transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
    }

    .dropdown:hover .dropdown-menu {
      opacity: 1;
      visibility: visible;
      transform: translateY(0);
    }

    .dropdown-item {
      display: block;
      padding: 10px 20px;
      text-decoration: none;
      color: #444444;
      font-family: var(--body-font);
      font-size: 13px;
      transition: all 0.2s;
    }

    .dropdown-item:hover {
      background: #fafafa;
      color: var(--header-text);
      padding-left: 25px;
    }

    @media (max-width: 1024px) {

      .main-nav,
      .header-actions .action-icon:not(.cart-icon):not(.mobile-toggle) {
        display: none;
      }

      .header-container {
        padding: 0 20px;
      }

      .mobile-toggle {
        display: block !important;
      }

      .header-actions {
        gap: 15px;
      }
    }

    .mobile-toggle {
      display: none;
      background: none;
      border: none;
      font-size: 20px;
      cursor: pointer;
      color: var(--header-text);
      padding: 5px;
    }

    /* Mobile Menu Styles */
    .mobile-menu {
      position: fixed;
      top: 0;
      right: -100%;
      width: 300px;
      height: 100vh;
      background: white;
      z-index: 2000;
      transition: right 0.4s cubic-bezier(0.16, 1, 0.3, 1);
      padding: 60px 30px;
      box-shadow: -10px 0 30px rgba(0, 0, 0, 0.05);
    }

    .mobile-menu.active {
      right: 0;
    }

    .mobile-menu-close {
      position: absolute;
      top: 20px;
      right: 20px;
      background: none;
      border: none;
      font-size: 20px;
      cursor: pointer;
    }

    .mobile-menu-items {
      list-style: none;
      padding: 0;
    }

    .mobile-menu-items li {
      margin-bottom: 25px;
    }

    .mobile-menu-items a {
      text-decoration: none;
      color: var(--header-text);
      font-family: var(--header-font);
      font-size: 18px;
      font-weight: 600;
      text-transform: uppercase;
    }

    .mobile-menu-open {
      overflow: hidden;
    }

    .mobile-overlay {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.3);
      z-index: 1001;
      opacity: 0;
      visibility: hidden;
      transition: 0.3s;
    }

    .mobile-menu.active~.mobile-overlay {
      opacity: 1;
      visibility: visible;
    }

    /* Reduced Motion */
    @media (prefers-reduced-motion: reduce) {
      * {
        animation-duration: 0.01ms !important;
        animation-iteration-count: 1 !important;
        transition-duration: 0.01ms !important;
      }
    }
  </style>


<body class="goto-here">
  <header class="main-header">
    <div class="header-container">
      <a href="/" class="brand-logo">
        <h1>NexTick</h1>
      </a>

      <div class="header-search">
        <form action="/shop" method="GET">
          <i class="fas fa-search search-icon"></i>
          <input type="text" name="query" class="search-input" placeholder="Search for timepieces...">
        </form>
      </div>

      <nav class="main-nav">
        <ul class="nav-menu">
          <li><a href="/" class="nav-link">Home</a></li>
          <li><a href="/shop" class="nav-link">Shop</a></li>
          <li><a href="/about" class="nav-link">About</a></li>
        </ul>
      </nav>

      <div class="header-actions">
        <a href="/wishlist" class="action-icon">
          <i class="fas fa-heart"></i>
        </a>
        <a href="/cart" class="action-icon cart-icon">
          <i class="fas fa-shopping-bag"></i>
          <span class="badge cart-count">
            <%= locals.cartCount || 0 %>
          </span>
        </a>

        <div class="dropdown">
          <% if (locals.user) { %>
            <a href="/userProfile" class="action-icon d-flex align-items-center">
              <i class="fas fa-user-circle"></i>
              <span class="user-name-text">
                <%= user.name %>
              </span>
            </a>
            <% } else { %>
              <a href="/login" class="action-icon">
                <i class="fas fa-user-circle"></i>
              </a>
              <% } %>
                <div class="dropdown-menu">
                  <% if (locals.user) { %>
                    <a href="/userProfile" class="dropdown-item">Profile</a>
                    <a href="/logout" class="dropdown-item">Logout</a>
                    <% } else { %>
                      <a href="/login" class="dropdown-item">Sign In</a>
                      <a href="/signup" class="dropdown-item">Register</a>
                      <% } %>
                </div>
        </div>

        <button class="mobile-toggle" onclick="toggleMobileMenu()">
          <i class="fas fa-bars"></i>
        </button>
      </div>
    </div>
  </header>

  <!-- Mobile Menu -->
  <div class="mobile-menu" id="mobileMenu">
    <button class="mobile-menu-close" onclick="toggleMobileMenu()">
      <i class="fas fa-times"></i>
    </button>
    <ul class="mobile-menu-items">
      <li><a href="/">Home</a></li>
      <li><a href="/shop">Shop</a></li>
      <% if (locals.user) { %>
        <li><a href="/userProfile">My Account</a></li>
        <li><a href="/wishlist">Wishlist</a></li>
        <li><a href="/cart">Cart</a></li>
        <li><a href="/logout">Logout</a></li>
        <% } else { %>
          <li><a href="/login">Login</a></li>
          <li><a href="/signup">Sign Up</a></li>
          <% } %>
    </ul>
  </div>
  <div class="mobile-overlay" onclick="toggleMobileMenu()"></div>

  <script>
    // Mobile Menu Toggle
    function toggleMobileMenu() {
      const mobileMenu = document.getElementById('mobileMenu');
      const body = document.body;
      mobileMenu.classList.toggle('active');
      body.classList.toggle('mobile-menu-open');
    }

    // Navbar Scroll Effect
    window.addEventListener('scroll', function () {
      const header = document.querySelector('.main-header');
      if (window.scrollY > 50) {
        header.style.padding = '10px 0';
        header.style.boxShadow = '0 10px 30px rgba(0,0,0,0.05)';
      } else {
        header.style.padding = '15px 0';
        header.style.boxShadow = 'none';
      }
    });

    // Cart Count Global Sync
    function updateCartCount(count) {
      document.querySelectorAll('.cart-count').forEach(el => el.textContent = count);
    }
  </script>