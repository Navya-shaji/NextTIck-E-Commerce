<%- include("../../views/partials/admin/header") %>
    <style>
        .content-wrapper {
            padding: 2.5rem;
            background-color: var(--admin-bg);
        }

        .content-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
        }

        .content-title {
            font-family: 'Outfit', sans-serif;
            font-size: 1.5rem;
            font-weight: 700;
            color: #1e293b;
            margin: 0;
        }

        /* Search Section */
        .search-container {
            max-width: 400px;
            position: relative;
        }

        .search-input {
            width: 100%;
            padding: 0.7rem 2.5rem 0.7rem 2.8rem;
            background: white;
            border: 1px solid #e2e8f0;
            border-radius: 10px;
            font-size: 0.9rem;
            transition: all 0.2s;
        }

        .search-input:focus {
            border-color: var(--accent-gold);
            box-shadow: 0 0 0 3px rgba(197, 160, 89, 0.1);
            outline: none;
        }

        .search-icon {
            position: absolute;
            left: 1rem;
            top: 50%;
            transform: translateY(-50%);
            color: #94a3b8;
            font-size: 1rem;
        }

        /* Page-specific styles */
        .pagination-container {
            margin-top: 1.5rem;
        }

        .page-link {
            border: 1px solid #e5e7eb;
            color: #6b7280;
            font-weight: 500;
            padding: 0.5rem 0.75rem;
            border-radius: 4px;
            margin: 0 2px;
            background: white;
        }

        .page-link:hover {
            background: #f9fafb;
            color: #111827;
        }

        .page-item.active .page-link {
            background: #111827;
            color: white;
            border-color: #111827;
        }

        .empty-state {
            padding: 3rem 2rem;
            text-align: center;
            color: #9ca3af;
        }

        .empty-state i {
            font-size: 2.5rem;
            display: block;
            margin-bottom: 1rem;
            opacity: 0.4;
        }

        .clear-search {
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: #9ca3af;
            font-size: 1rem;
            cursor: pointer;
            text-decoration: none;
            transition: color 0.2s;
        }

        .clear-search:hover {
            color: #ef4444;
        }
    </style>

    <div class="content-wrapper">
        <div class="content-header">
            <h2 class="content-title">Customer Management</h2>
            <div class="search-container">
                <form action="/admin/users" method="get" style="position: relative;">
                    <i class="fas fa-search search-icon"></i>
                    <input type="text" class="search-input" name="search" placeholder="Search customers..."
                        value="<%= search %>">
                    <% if (search) { %>
                        <a href="/admin/users" class="clear-search" title="Clear Search">
                            <i class="fas fa-times"></i>
                        </a>
                        <% } %>
                </form>
            </div>
        </div>

        <div class="premium-card">
            <table class="table">
                <thead>
                    <tr>
                        <th>Customer</th>
                        <th>Email</th>
                        <th>Contact</th>
                        <th class="text-center">Status</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (customers && customers.length> 0) { %>
                        <% customers.forEach((customer)=> { %>
                            <tr>
                                <td class="fw-bold">
                                    <%= customer.name || "Anonymous User" %>
                                </td>
                                <td>
                                    <%= customer.email %>
                                </td>
                                <td>
                                    <%= customer.phone || "Not specified" %>
                                </td>
                                <td class="text-center">
                                    <% if (customer.isBlocked) { %>
                                        <span class="status-badge badge-blocked">Blocked</span>
                                        <% } else { %>
                                            <span class="status-badge badge-active">Active</span>
                                            <% } %>
                                </td>
                                <td class="text-end">
                                    <div class="dropdown">
                                        <button class="btn btn-sm btn-light border dropdown-toggle" type="button"
                                            data-bs-toggle="dropdown">
                                            Actions
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-end shadow-sm border-0">
                                            <li>
                                                <% if (customer.isBlocked) { %>
                                                    <a class="dropdown-item py-2 text-success spa-action-btn"
                                                        href="/admin/unblock/<%= customer._id %>">
                                                        <i class="fas fa-unlock me-2"></i>Authorize Customer
                                                    </a>
                                                    <% } else { %>
                                                        <a class="dropdown-item py-2 text-danger spa-action-btn"
                                                            href="/admin/block/<%= customer._id %>">
                                                            <i class="fas fa-ban me-2"></i>Restrict Customer
                                                        </a>
                                                        <% } %>
                                            </li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                            <% }); %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="5">
                                            <div class="empty-state">
                                                <i class="fas fa-users-slash"></i>
                                                <p>No customers found</p>
                                            </div>
                                        </td>
                                    </tr>
                                    <% } %>
                </tbody>
            </table>
        </div>

        <% if (pagination && pagination.totalPages> 1) {
            const { currentPage, totalPages } = pagination;
            let startPage = Math.max(1, currentPage - 2);
            let endPage = Math.min(totalPages, currentPage + 2);

            if (currentPage <= 3) { endPage=Math.min(totalPages, 5); } if (currentPage> totalPages - 3) {
                startPage = Math.max(1, totalPages - 4);
                }
                %>
                <div class="pagination-container">
                    <ul class="pagination justify-content-center">
                        <% if (currentPage> 1) { %>
                            <li class="page-item">
                                <a class="page-link"
                                    href="?page=<%= currentPage - 1 %>&search=<%= search %>">&laquo;</a>
                            </li>
                            <% } %>

                                <% if (startPage> 1) { %>
                                    <li class="page-item">
                                        <a class="page-link" href="?page=1&search=<%= search %>">1</a>
                                    </li>
                                    <% if (startPage> 2) { %>
                                        <li class="page-item disabled"><span class="page-link">...</span></li>
                                        <% } %>
                                            <% } %>

                                                <% for (let i=startPage; i <=endPage; i++) { %>
                                                    <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                                        <a class="page-link" href="?page=<%= i %>&search=<%= search %>">
                                                            <%= i %>
                                                        </a>
                                                    </li>
                                                    <% } %>

                                                        <% if (endPage < totalPages) { %>
                                                            <% if (endPage < totalPages - 1) { %>
                                                                <li class="page-item disabled"><span
                                                                        class="page-link">...</span></li>
                                                                <% } %>
                                                                    <li class="page-item">
                                                                        <a class="page-link"
                                                                            href="?page=<%= totalPages %>&search=<%= search %>">
                                                                            <%= totalPages %>
                                                                        </a>
                                                                    </li>
                                                                    <% } %>

                                                                        <% if (currentPage < totalPages) { %>
                                                                            <li class="page-item">
                                                                                <a class="page-link"
                                                                                    href="?page=<%= currentPage + 1 %>&search=<%= search %>">&raquo;</a>
                                                                            </li>
                                                                            <% } %>
                    </ul>
                </div>
                <% } %>
    </div>

    <%- include("../../views/partials/admin/footer") %>