<%- include("../../views/partials/admin/header") %>
    <style>
        .content-wrapper {
            padding: 2.5rem;
            background-color: var(--admin-bg);
        }

        .content-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
        }

        .content-title {
            font-family: 'Outfit', sans-serif;
            font-size: 1.5rem;
            font-weight: 700;
            color: #1e293b;
            margin: 0;
        }

        /* Summary Grid */
        .summary-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
            gap: 1.5rem;
            margin-bottom: 2rem;
        }

        .premium-card {
            background: white;
            border-radius: 16px;
            padding: 1.5rem;
            box-shadow: var(--card-shadow);
            border: 1px solid rgba(0, 0, 0, 0.02);
            display: flex;
            flex-direction: column;
        }

        .card-icon {
            width: 45px;
            height: 45px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.2rem;
            margin-bottom: 1rem;
        }

        .icon-revenue {
            background: rgba(16, 185, 129, 0.1);
            color: #10b981;
        }

        .icon-orders {
            background: rgba(59, 130, 246, 0.1);
            color: #3b82f6;
        }

        .icon-users {
            background: rgba(245, 158, 11, 0.1);
            color: #f59e0b;
        }

        .icon-products {
            background: rgba(99, 102, 241, 0.1);
            color: #6366f1;
        }

        .card-label {
            font-size: 0.85rem;
            color: #64748b;
            font-weight: 600;
            text-transform: uppercase;
            margin-bottom: 0.25rem;
        }

        .card-value {
            font-size: 1.5rem;
            font-weight: 700;
            color: #1e293b;
            margin: 0;
        }

        .card-subtext {
            font-size: 0.75rem;
            color: #94a3b8;
            margin-top: 0.5rem;
        }

        /* Filters Section */
        .filter-card {
            background: white;
            border-radius: 16px;
            padding: 1.5rem;
            box-shadow: var(--card-shadow);
            margin-bottom: 2rem;
            border: 1px solid rgba(0, 0, 0, 0.02);
        }

        .form-label {
            color: #64748b;
            font-weight: 600;
            font-size: 0.85rem;
            margin-bottom: 0.5rem;
        }

        .form-control,
        .form-select {
            border-radius: 10px;
            padding: 0.6rem 1rem;
            border: 1px solid #e2e8f0;
            font-size: 0.9rem;
        }

        .form-control:focus,
        .form-select:focus {
            border-color: var(--accent-gold);
            box-shadow: 0 0 0 3px rgba(197, 160, 89, 0.1);
        }

        .btn-gold {
            background: var(--accent-gold);
            color: white;
            border: none;
            padding: 0.6rem 1.5rem;
            border-radius: 10px;
            font-weight: 600;
            transition: all 0.2s;
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
        }

        .btn-gold:hover {
            background: var(--accent-gold-hover);
            transform: translateY(-1px);
        }

        .btn-outline-primary {
            color: var(--accent-gold);
            border: 1px solid var(--accent-gold);
            background: transparent;
            padding: 0.5rem 1rem;
            border-radius: 8px;
            font-weight: 600;
        }

        .btn-outline-primary:hover {
            background: var(--accent-gold);
            color: white;
        }

        .btn-outline-success {
            color: #10b981;
            border: 1px solid #10b981;
            background: transparent;
            padding: 0.5rem 1rem;
            border-radius: 8px;
            font-weight: 600;
        }

        .btn-outline-success:hover {
            background: #10b981;
            color: white;
        }

        /* Table Styling */
        .report-card {
            background: white;
            border-radius: 16px;
            box-shadow: var(--card-shadow);
            border: 1px solid rgba(0, 0, 0, 0.02);
            overflow: hidden;
        }

        .table {
            margin-bottom: 0;
        }

        .table thead th {
            background: #f8fafc;
            color: #64748b;
            font-size: 0.75rem;
            font-weight: 700;
            text-transform: uppercase;
            padding: 1rem 1.5rem;
            border: none;
        }

        .table tbody td {
            padding: 1.25rem 1.5rem;
            vertical-align: middle;
            border-top: 1px solid #f1f5f9;
            font-size: 0.9rem;
            color: #334155;
        }

        .status-badge {
            padding: 0.35rem 0.75rem;
            border-radius: 6px;
            font-size: 0.75rem;
            font-weight: 700;
            text-transform: uppercase;
        }

        /* Badges */
        .badge-delivered {
            background: #ecfdf5;
            color: #10b981;
        }

        .badge-shipped {
            background: #eff6ff;
            color: #3b82f6;
        }

        .badge-processing {
            background: #fff7ed;
            color: #c2410c;
        }

        .badge-cancelled {
            background: #fff1f2;
            color: #e11d48;
        }

        .badge-returned {
            background: #fefce8;
            color: #ca8a04;
        }

        .badge-pending {
            background: #f1f5f9;
            color: #64748b;
        }

        /* Pagination */
        .pagination-wrap {
            margin-top: 2rem;
            display: flex;
            justify-content: center;
        }

        .page-link {
            border: none;
            color: #64748b;
            font-weight: 500;
            padding: 0.5rem 1rem;
            border-radius: 8px;
            margin: 0 2px;
        }

        .page-item.active .page-link {
            background: var(--accent-gold);
            color: white;
        }
    </style>

    <div class="content-wrapper">
        <div class="content-header">
            <h2 class="content-title">Sales Analytics</h2>
            <div class="btn-group gap-2">
                <button onclick="downloadReport('pdf')" class="btn-outline-primary">
                    <i class="fas fa-file-pdf me-1"></i> PDF
                </button>
                <button onclick="downloadReport('excel')" class="btn-outline-success">
                    <i class="fas fa-file-excel me-1"></i> Excel
                </button>
            </div>
        </div>

        <!-- Summary Cards -->
        <div class="summary-grid">
            <div class="premium-card">
                <div class="card-icon icon-revenue"><i class="fas fa-rupee-sign"></i></div>
                <p class="card-label">Total Revenue</p>
                <h3 class="card-value">₹<%= totalRevenue.toLocaleString('en-IN', { maximumFractionDigits: 2 }) %>
                </h3>
                <p class="card-subtext">Net revenue (discounts applied)</p>
            </div>
            <div class="premium-card">
                <div class="card-icon icon-orders"><i class="fas fa-shopping-cart"></i></div>
                <p class="card-label">Total Orders</p>
                <h3 class="card-value">
                    <%= totalOrders.toLocaleString('en-IN') %>
                </h3>
                <p class="card-subtext">
                    <%= completedOrders %> Completed • <%= cancelledOrders %> Cancelled
                </p>
            </div>
            <div class="premium-card">
                <div class="card-icon icon-users"><i class="fas fa-users"></i></div>
                <p class="card-label">Unique Customers</p>
                <h3 class="card-value">
                    <%= totalUsers.toLocaleString('en-IN') %>
                </h3>
                <p class="card-subtext">Active in selected period</p>
            </div>
            <div class="premium-card">
                <div class="card-icon icon-products"><i class="fas fa-box-open"></i></div>
                <p class="card-label">Products Sold</p>
                <h3 class="card-value">
                    <%= productsSold.toLocaleString('en-IN') %>
                </h3>
                <p class="card-subtext">Total unit volume</p>
            </div>
        </div>

        <!-- Filters -->
        <div class="filter-card">
            <form id="filter-form" method="GET" class="row g-3 align-items-end">
                <div class="col-12 col-md-3">
                    <label for="period" class="form-label">Time Period</label>
                    <select id="period" name="period" class="form-select">
                        <option value="daily" <%=period==='daily' ? 'selected' : '' %>>Daily</option>
                        <option value="weekly" <%=period==='weekly' ? 'selected' : '' %>>Weekly</option>
                        <option value="monthly" <%=period==='monthly' ? 'selected' : '' %>>Monthly</option>
                        <option value="yearly" <%=period==='yearly' ? 'selected' : '' %>>Yearly</option>
                        <option value="custom" <%=period==='custom' ? 'selected' : '' %>>Custom Range</option>
                    </select>
                </div>

                <div class="col-12 col-md-3 custom-dates" style="display: none;">
                    <label for="startDate" class="form-label">Start Date</label>
                    <input type="date" id="startDate" name="startDate" class="form-control"
                        value="<%= startDate || '' %>">
                </div>

                <div class="col-12 col-md-3 custom-dates" style="display: none;">
                    <label for="endDate" class="form-label">End Date</label>
                    <input type="date" id="endDate" name="endDate" class="form-control" value="<%= endDate || '' %>">
                </div>

                <div class="col-12 col-md-3">
                    <button type="submit" class="btn-gold w-100">
                        <i class="fas fa-sync-alt"></i> Update Report
                    </button>
                </div>

                <!-- Hidden fields -->
                <input type="hidden" name="page" value="<%= currentPage || 1 %>">
                <input type="hidden" name="limit" value="<%= limit || 10 %>">
            </form>
        </div>

        <!-- Orders Table -->
        <div class="report-card">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Order ID</th>
                            <th>Customer</th>
                            <th>Date</th>
                            <th>Status</th>
                            <th>Payment</th>
                            <th>Total</th>
                            <!-- <th>Details</th> -->
                        </tr>
                    </thead>
                    <tbody>
                        <% orders.forEach(order=> { %>
                            <tr>
                                <td class="fw-bold">#<%= order.orderId %>
                                </td>
                                <td>
                                    <%= order.userName || 'Guest' %>
                                </td>
                                <td class="text-muted">
                                    <%= new Date(order.createdOn).toLocaleDateString() %>
                                </td>
                                <td>
                                    <span
                                        class="status-badge badge-<%= order.status.toLowerCase().replace(' ', '-') %>">
                                        <%= order.status %>
                                    </span>
                                </td>
                                <td>
                                    <%= order.paymentMethod || 'N/A' %>
                                </td>
                                <td class="fw-bold">₹<%= order.finalAmount.toFixed(2) %>
                                </td>
                                <!-- <td>
                                <a href="/admin/orders/<%= order._id %>" class="btn btn-sm btn-light border">View</a>
                            </td> -->
                            </tr>
                            <% }); %>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Pagination -->
        <% if (totalPages> 1) { %>
            <div class="pagination-wrap">
                <nav aria-label="Page navigation">
                    <ul class="pagination">
                        <% if (currentPage> 1) { %>
                            <li class="page-item">
                                <a class="page-link"
                                    href="?page=<%= currentPage - 1 %>&period=<%= period %>&startDate=<%= startDate %>&endDate=<%= endDate %>"><i
                                        class="fas fa-chevron-left"></i></a>
                            </li>
                            <% } %>

                                <% for(let i=1; i <=totalPages; i++) { %>
                                    <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                        <a class="page-link"
                                            href="?page=<%= i %>&period=<%= period %>&startDate=<%= startDate %>&endDate=<%= endDate %>">
                                            <%= i %>
                                        </a>
                                    </li>
                                    <% } %>

                                        <% if (currentPage < totalPages) { %>
                                            <li class="page-item">
                                                <a class="page-link"
                                                    href="?page=<%= currentPage + 1 %>&period=<%= period %>&startDate=<%= startDate %>&endDate=<%= endDate %>"><i
                                                        class="fas fa-chevron-right"></i></a>
                                            </li>
                                            <% } %>
                    </ul>
                </nav>
            </div>
            <% } %>
    </div>

    <script>
        // Initialize elements
        const periodSelect = document.getElementById('period');
        const customDates = document.querySelectorAll('.custom-dates');
        const filterForm = document.getElementById('filter-form');
        const startDateInput = document.getElementById('startDate');
        const endDateInput = document.getElementById('endDate');

        // Toggle custom date fields
        function toggleCustomDates() {
            const isCustom = periodSelect.value === 'custom';
            customDates.forEach(el => {
                el.style.display = isCustom ? 'block' : 'none';
                // Required attribute toggle for validation if needed
                const input = el.querySelector('input');
                if (input) {
                    if (isCustom) input.setAttribute('required', 'required');
                    else input.removeAttribute('required');
                }
            });
        }

        // Handle Filter without Page Refresh (AJAX)
        async function updateReport(e) {
            if (e) e.preventDefault();

            // Validate custom dates if selected
            if (periodSelect.value === 'custom') {
                if (!startDateInput.value || !endDateInput.value) {
                    // Don't submit if dates are missing in custom mode
                    return;
                }
            }

            const formData = new FormData(filterForm);
            const params = new URLSearchParams(formData);

            // Fetch only the content part or partial
            // In a real SPA we might fetch JSON and rebuild table, 
            // but since we have EJS, we can fetch the page with query params 
            // and parse the HTML to replace the table container.

            const mainContentSelector = '.content-wrapper';
            // Or specific container like '.report-card' if you only want to update table
            // But summary cards also change, so wrapper is better.

            try {
                // Show loading
                document.querySelector(mainContentSelector).style.opacity = '0.5';

                const response = await fetch(`${window.location.pathname}?${params.toString()}`);
                if (!response.ok) throw new Error('Network response was not ok');

                const html = await response.text();
                const parser = new DOMParser();
                const doc = parser.parseFromString(html, 'text/html');

                const newContent = doc.querySelector(mainContentSelector);
                if (newContent) {
                    document.querySelector(mainContentSelector).replaceWith(newContent);

                    // Update URL without reload
                    window.history.pushState({ path: `${window.location.pathname}?${params.toString()}` }, '', `?${params.toString()}`);

                    // Re-bind events since DOM was replaced
                    bindEvents();

                    // Re-initialize scripts if needed or just re-run toggleCustomDates
                    const newPeriodSelect = document.getElementById('period');
                    if (newPeriodSelect) {
                        const newCustomDates = document.querySelectorAll('.custom-dates');
                        const isCustom = newPeriodSelect.value === 'custom';
                        newCustomDates.forEach(el => el.style.display = isCustom ? 'block' : 'none');
                    }
                }
            } catch (error) {
                console.error('Error updating report:', error);
                // Fallback to normal submit if fetch fails
                // filterForm.submit(); 
            } finally {
                const wrapper = document.querySelector(mainContentSelector);
                if (wrapper) wrapper.style.opacity = '1';
            }
        }

        function bindEvents() {
            const form = document.getElementById('filter-form');
            if (form) {
                form.addEventListener('submit', updateReport);

                // Auto-submit on select change (optional, but good UX)
                const period = document.getElementById('period');
                if (period) {
                    period.addEventListener('change', function () {
                        toggleCustomDates();
                        if (this.value !== 'custom') {
                            // Trigger update immediately for non-custom
                            form.requestSubmit();
                        }
                    });
                }

                // For custom dates, maybe wait for button click or both dates filled
            }

            // Pagination links handling
            document.querySelectorAll('.page-link').forEach(link => {
                link.addEventListener('click', function (e) {
                    e.preventDefault();
                    const href = this.getAttribute('href');
                    if (!href) return;

                    // Extract page number from href or just use the href directly via fetch
                    // The href already contains the correct query params from EJS render

                    // We can reuse the SPA fetch logic or just call fetch(href)
                    fetchPage(href);
                });
            });
        }

        async function fetchPage(url) {
            const mainContentSelector = '.content-wrapper';
            try {
                document.querySelector(mainContentSelector).style.opacity = '0.5';
                const response = await fetch(url);
                const html = await response.text();
                const parser = new DOMParser();
                const doc = parser.parseFromString(html, 'text/html');
                const newContent = doc.querySelector(mainContentSelector);
                if (newContent) {
                    document.querySelector(mainContentSelector).replaceWith(newContent);
                    window.history.pushState({ path: url }, '', url);
                    bindEvents(); // Re-bind
                    // Re-init custom dates state
                    const newPeriodSelect = document.getElementById('period');
                    if (newPeriodSelect) {
                        const newCustomDates = document.querySelectorAll('.custom-dates');
                        const isCustom = newPeriodSelect.value === 'custom';
                        newCustomDates.forEach(el => el.style.display = isCustom ? 'block' : 'none');
                    }
                }
            } catch (e) {
                console.error(e);
                window.location.href = url;
            }
        }

        // Initial Bind
        document.addEventListener('DOMContentLoaded', () => {
            bindEvents();
            toggleCustomDates();
        });

        // function downloadReport(format) {
        //     const period = document.getElementById('period').value;
        //     const startDate = document.getElementById('startDate').value;
        //     const endDate = document.getElementById('endDate').value;

        //     let url = `/admin/sales-report/download?format=${format}&period=${period}`;
        //     if (period === 'custom' && startDate && endDate) {
        //         url += `&startDate=${startDate}&endDate=${endDate}`;
        //     }

        //     window.location.href = url;
        // }
        function downloadReport(format) {
            console.log('Download initiated', { format });

            const period = document.getElementById('period')?.value;
            const startDate = document.getElementById('startDate')?.value;
            const endDate = document.getElementById('endDate')?.value;

            console.log('Form values:', { period, startDate, endDate });

            if (!period) {
                console.error('Period is required');
                return;
            }

            let url = `/admin/sales-report/download?format=${encodeURIComponent(format)}&period=${encodeURIComponent(period)}`;

            if (period === 'custom' && startDate && endDate) {
                url += `&startDate=${encodeURIComponent(startDate)}&endDate=${encodeURIComponent(endDate)}`;
            }

            console.log('Generated URL:', url);
            window.location.href = url;
        }

        function changePage(page) {
            const form = document.getElementById('filter-form');
            form.querySelector('input[name="page"]').value = page;
            form.submit();
        }

        function changeLimit(limit) {
            const form = document.getElementById('filter-form');
            form.querySelector('input[name="limit"]').value = limit;
            form.querySelector('input[name="page"]').value = 1;
            form.submit();
        }

    </script>
    <%- include("../../views/partials/admin/footer") %>