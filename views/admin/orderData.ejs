<%- include("../../views/partials/admin/header") %>
    <style>
        thead {
            background-color: black;
        }

        .product-img {
            max-width: 50px;
            max-height: 50px;
            object-fit: cover;
        }
    </style>
    <style>
        .content-wrapper {
            padding: 2rem;
            background-color: #f8fafc;
        }

        .order-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
        }

        .page-title {
            font-family: 'Outfit', sans-serif;
            font-size: 1.75rem;
            font-weight: 700;
            color: #1e293b;
            margin: 0;
        }

        .premium-card {
            background: white;
            border-radius: 16px;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
            border: 1px solid rgba(0, 0, 0, 0.05);
            margin-bottom: 2rem;
            overflow: hidden;
        }

        .card-header-premium {
            padding: 1.25rem 1.5rem;
            background: #fff;
            border-bottom: 1px solid #f1f5f9;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .card-header-premium h4 {
            font-family: 'Outfit', sans-serif;
            font-size: 1.1rem;
            font-weight: 700;
            margin: 0;
            color: #334155;
        }

        .card-body-premium {
            padding: 1.5rem;
        }

        .info-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1.5rem;
        }

        .info-item label {
            display: block;
            font-size: 0.75rem;
            font-weight: 700;
            text-transform: uppercase;
            color: #64748b;
            margin-bottom: 0.5rem;
            letter-spacing: 0.5px;
        }

        .info-item p {
            margin: 0;
            font-size: 0.95rem;
            color: #1e293b;
            font-weight: 500;
        }

        .status-badge {
            padding: 0.4rem 0.8rem;
            border-radius: 6px;
            font-size: 0.75rem;
            font-weight: 700;
            text-transform: uppercase;
        }

        .badge-pending {
            background: #fff7ed;
            color: #c2410c;
        }

        .badge-processing {
            background: #eff6ff;
            color: #1d4ed8;
        }

        .badge-shipped {
            background: #fdf4ff;
            color: #86198f;
        }

        .badge-delivered {
            background: #f0fdf4;
            color: #15803d;
        }

        .badge-cancelled {
            background: #fff1f2;
            color: #be123c;
        }

        .badge-returned {
            background: #f8fafc;
            color: #475569;
        }

        .items-table {
            width: 100%;
        }

        .items-table thead th {
            background: #f8fafc;
            color: #64748b;
            font-size: 0.75rem;
            font-weight: 700;
            text-transform: uppercase;
            padding: 1rem;
            border: none;
        }

        .items-table tbody td {
            padding: 1.25rem 1rem;
            vertical-align: middle;
            border-top: 1px solid #f1f5f9;
            font-size: 0.9rem;
        }

        .product-img {
            width: 60px;
            height: 60px;
            border-radius: 8px;
            object-fit: cover;
            border: 1px solid #f1f5f9;
        }

        .summary-row {
            display: flex;
            justify-content: flex-end;
            padding: 1rem 1.5rem;
            gap: 4rem;
            border-top: 1px solid #f1f5f9;
        }

        .summary-item {
            text-align: right;
        }

        .summary-item label {
            font-size: 0.8rem;
            color: #64748b;
            display: block;
            margin-bottom: 0.25rem;
        }

        .summary-item span {
            font-size: 1.1rem;
            font-weight: 700;
            color: #1e293b;
        }

        .summary-item.total span {
            font-size: 1.5rem;
            color: #c5a059;
        }

        .btn-back {
            padding: 0.6rem 1.2rem;
            border-radius: 10px;
            font-weight: 600;
            font-size: 0.9rem;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            background: white;
            border: 1px solid #e2e8f0;
            color: #64748b;
            transition: all 0.2s;
        }

        .btn-back:hover {
            background: #f8fafc;
            color: #1e293b;
            transform: translateX(-3px);
        }

        .action-select {
            padding: 0.5rem;
            border-radius: 8px;
            border: 1px solid #e2e8f0;
            font-size: 0.85rem;
            outline: none;
            cursor: pointer;
        }

        .action-select:focus {
            border-color: #c5a059;
        }
    </style>

    <div class="content-wrapper">
        <div class="order-header">
            <div>
                <a href="/admin/orderList" class="btn-back">
                    <i class="fas fa-arrow-left"></i> Back to Fleet
                </a>
                <h2 class="page-title mt-3">Order #<%= order.orderId %>
                </h2>
            </div>
            <div class="text-end">
                <span class="status-badge badge-<%= order.status.toLowerCase().replace(' ', '-') %>">
                    <%= order.status %>
                </span>
                <p class="text-muted small mt-2">Placed on <%= new Date(order.createdOn).toLocaleString('en-IN', {
                        dateStyle: 'full' , timeStyle: 'short' }) %>
                </p>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-8">
                <!-- Order Items -->
                <div class="premium-card">
                    <div class="card-header-premium">
                        <h4>Consignment Details</h4>
                    </div>
                    <div class="table-responsive">
                        <table class="table items-table mb-0">
                            <thead>
                                <tr>
                                    <th>Item</th>
                                    <th>Specifications</th>
                                    <th>Quantity</th>
                                    <th class="text-end">Unit Price</th>
                                    <th class="text-end">Total</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% order.orderItems.forEach(item=> { %>
                                    <tr>
                                        <td>
                                            <img src="/uploads/re-image/<%= item.product?.productImage[0] || 'default-product-image.jpg' %>"
                                                alt="Product" class="product-img">
                                        </td>
                                        <td>
                                            <div class="fw-bold text-dark">
                                                <%= item.product?.name || 'Deleted Product' %>
                                            </div>
                                            <div class="text-muted small">Status: <%= item.status %>
                                            </div>
                                        </td>
                                        <td class="text-center">
                                            <%= item.quantity %>
                                        </td>
                                        <td class="text-end">₹<%= item.price.toLocaleString('en-IN') %>
                                        </td>
                                        <td class="text-end fw-bold">₹<%= (item.quantity *
                                                item.price).toLocaleString('en-IN') %>
                                        </td>
                                        <td>
                                            <select class="action-select"
                                                onchange="updateItemStatus('<%= order._id %>', '<%= item.product?._id %>', this.value)">
                                                <option value="" disabled selected>Update</option>
                                                <option value="Processing">Processing</option>
                                                <option value="Shipped">Shipped</option>
                                                <option value="Delivered">Delivered</option>
                                                <option value="Cancelled">Cancelled</option>
                                                <option value="Returned">Returned</option>
                                            </select>
                                        </td>
                                    </tr>
                                    <% }); %>
                            </tbody>
                        </table>
                    </div>
                    <div class="summary-row">
                        <div class="summary-item">
                            <label>Subtotal</label>
                            <span>₹<%= order.totalPrice.toLocaleString('en-IN') %></span>
                        </div>
                        <div class="summary-item">
                            <label>Discount</label>
                            <span class="text-success">-₹<%= (order.totalPrice -
                                    order.finalAmount).toLocaleString('en-IN') %></span>
                        </div>
                        <div class="summary-item total">
                            <label>Final Value</label>
                            <span>₹<%= order.finalAmount.toLocaleString('en-IN') %></span>
                        </div>
                    </div>
                </div>

                <% if (order.status==='Return Request' || order.status==='Returned' ) { %>
                    <div class="premium-card">
                        <div class="card-header-premium">
                            <h4 class="text-warning">Resolution Request</h4>
                        </div>
                        <div class="card-body-premium">
                            <div class="info-item">
                                <label>Client's Reasoning</label>
                                <p class="bg-light p-3 rounded" style="font-style: italic;">"<%= order.returnReason
                                        || 'No specific details provided.' %>"</p>
                            </div>
                        </div>
                    </div>
                    <% } %>
            </div>

            <div class="col-lg-4">
                <!-- Customer Details -->
                <div class="premium-card">
                    <div class="card-header-premium">
                        <h4>Client Profile</h4>
                    </div>
                    <div class="card-body-premium">
                        <div class="info-item mb-4">
                            <label>Full Name</label>
                            <p>
                                <%= order.userId?.name %>
                            </p>
                        </div>
                        <div class="info-item mb-4">
                            <label>Email Access</label>
                            <p>
                                <%= order.userId?.email %>
                            </p>
                        </div>
                        <div class="info-item">
                            <label>Shipping Identity</label>
                            <p>
                                <%= order.address?.street %>, <%= order.address?.city %>
                            </p>
                            <p class="text-muted small">
                                <%= order.address?.postalCode %>
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Logistics & Payment -->
                <div class="premium-card">
                    <div class="card-header-premium">
                        <h4>Transaction Logistics</h4>
                    </div>
                    <div class="card-body-premium">
                        <div class="info-item mb-4">
                            <label>Payment Method</label>
                            <p class="text-uppercase">
                                <%= order.paymentMethod %>
                            </p>
                        </div>
                        <% if (order.paymentId) { %>
                            <div class="info-item mb-4">
                                <label>Transaction Reference</label>
                                <p class="small text-break">
                                    <%= order.paymentId %>
                                </p>
                            </div>
                            <% } %>
                                <div class="info-item">
                                    <label>Consignment Status</label>
                                    <form id="mainStatusForm" class="mt-2">
                                        <select id="orderStatus" class="form-select action-select w-100 mb-3"
                                            <%=['Delivered', 'Cancelled' , 'Returned' ].includes(order.status)
                                            ? 'disabled' : '' %>>
                                            <option value="Pending" <%=order.status==='Pending' ? 'selected' : '' %>
                                                >Pending</option>
                                            <option value="Processing" <%=order.status==='Processing' ? 'selected' : ''
                                                %>>Processing</option>
                                            <option value="Shipped" <%=order.status==='Shipped' ? 'selected' : '' %>
                                                >Shipped</option>
                                            <option value="Delivered" <%=order.status==='Delivered' ? 'selected' : '' %>
                                                >Delivered</option>
                                            <option value="Cancelled" <%=order.status==='Cancelled' ? 'selected' : '' %>
                                                >Cancelled</option>
                                            <option value="Returned" <%=order.status==='Returned' ? 'selected' : '' %>
                                                >Returned</option>
                                        </select>
                                        <% if (!['Delivered', 'Cancelled' , 'Returned' ].includes(order.status)) { %>
                                            <button type="submit" class="btn btn-dark w-100"
                                                style="border-radius: 10px;">Update Logistics</button>
                                            <% } %>
                                    </form>
                                </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const mainStatusForm = document.getElementById('mainStatusForm');
            if (mainStatusForm) {
                mainStatusForm.addEventListener('submit', async function (e) {
                    e.preventDefault();
                    const status = document.getElementById('orderStatus').value;
                    try {
                        const response = await fetch('/admin/orders/update-status', {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify({ orderId: '<%= order._id %>', status: status })
                        });
                        const data = await response.json();
                        if (data.success) {
                            Swal.fire({
                                icon: 'success',
                                title: 'Logistics Updated',
                                confirmButtonColor: '#1e293b'
                            }).then(() => location.reload());
                        } else {
                            Swal.fire({
                                icon: 'error',
                                title: 'Update Failed',
                                text: data.message
                            });
                        }
                    } catch (error) {
                        Swal.fire('Error', 'Communication failure', 'error');
                    }
                });
            }
        });

        async function updateItemStatus(orderId, productId, status) {
            try {
                const result = await Swal.fire({
                    title: 'Update Item Status?',
                    text: `Are you sure you want to change this item's status to ${status}?`,
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Yes, update it!'
                });

                if (result.isConfirmed) {
                    const response = await fetch('/admin/orders/update-item-status', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ orderId, productId, status })
                    });
                    const data = await response.json();
                    if (data.success) {
                        Swal.fire('Updated!', data.message, 'success').then(() => location.reload());
                    } else {
                        Swal.fire('Error', data.message || 'Failed to update status', 'error');
                    }
                }
            } catch (error) {
                console.error('Error updating item status:', error);
                Swal.fire('Error', 'An internal error occurred', 'error');
            }
        }
    </script>

    <%- include("../../views/partials/admin/footer") %>