<%- include("../partials/admin/header") %>

    <style>
        /* Dashboard-specific Styles */
        .dashboard-container {
            padding: 2rem;
        }

        .content-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2.5rem;
        }

        .header-title {
            font-family: 'Outfit', sans-serif;
            font-weight: 700;
            font-size: 1.5rem;
            color: #1e293b;
            margin: 0;
        }

        .btn-gold {
            background-color: var(--accent-gold);
            color: white;
            border: none;
            padding: 0.75rem 1.5rem;
            border-radius: 10px;
            font-weight: 600;
            font-family: 'Outfit', sans-serif;
            transition: all 0.3s;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

        .btn-gold:hover {
            background-color: var(--accent-gold-hover);
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(197, 160, 89, 0.2);
            color: white;
        }

        /* Summary Cards */
        .summary-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(210px, 1fr));
            gap: 1.25rem;
            margin-bottom: 2rem;
        }

        .premium-card {
            background: white;
            border-radius: 16px;
            padding: 1.25rem;
            box-shadow: var(--card-shadow);
            border: 1px solid rgba(0, 0, 0, 0.02);
            transition: transform 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
            position: relative;
            overflow: hidden;
        }

        .premium-card:hover {
            transform: translateY(-8px);
        }

        .card-icon-wrap {
            width: 50px;
            height: 50px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 1.25rem;
            font-size: 1.25rem;
        }

        .icon-revenue {
            background: #ecfdf5;
            color: #10b981;
        }

        .icon-orders {
            background: #eff6ff;
            color: #3b82f6;
        }

        .icon-users {
            background: #fefce8;
            color: #eab308;
        }

        .icon-products {
            background: #f5f3ff;
            color: #8b5cf6;
        }

        .card-label {
            color: #64748b;
            font-size: 0.875rem;
            font-weight: 600;
            margin-bottom: 0.5rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .card-value {
            font-family: 'Outfit', sans-serif;
            font-size: 1.5rem;
            font-weight: 700;
            color: #1e293b;
            margin: 0;
        }

        /* Status Accents */
        .card-accent-revenue {
            border-bottom: 4px solid #10b981;
        }

        .card-accent-orders {
            border-bottom: 4px solid #3b82f6;
        }

        .card-accent-pending {
            border-bottom: 4px solid #f59e0b;
        }

        .card-accent-completed {
            border-bottom: 4px solid #8b5cf6;
        }

        /* Chart Section */
        .chart-section {
            background: white;
            border-radius: 24px;
            padding: 2rem;
            box-shadow: var(--card-shadow);
            margin-bottom: 2.5rem;
        }

        .chart-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
        }

        .chart-title {
            font-family: 'Outfit', sans-serif;
            font-weight: 700;
            font-size: 1.25rem;
            margin: 0;
        }

        .chart-filters {
            display: flex;
            gap: 1rem;
        }

        .premium-select {
            border: 1px solid #e2e8f0;
            border-radius: 10px;
            padding: 0.5rem 1rem;
            font-size: 0.875rem;
            font-weight: 500;
            outline: none;
            transition: border-color 0.2s;
        }

        .premium-select:focus {
            border-color: var(--accent-gold);
        }

        .chart-container {
            height: 300px;
            position: relative;
        }

        /* Top Lists Section */
        .top-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
            gap: 1.5rem;
        }

        .top-card {
            background: white;
            border-radius: 24px;
            padding: 1.5rem;
            box-shadow: var(--card-shadow);
        }

        .top-card-title {
            font-family: 'Outfit', sans-serif;
            font-weight: 700;
            font-size: 1.15rem;
            margin-bottom: 1.5rem;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .top-list-item {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 1rem;
            border-radius: 12px;
            transition: background 0.2s;
            margin-bottom: 0.5rem;
        }

        .top-list-item:hover {
            background: #f8fafc;
        }

        .item-rank {
            width: 28px;
            height: 28px;
            background: #f1f5f9;
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 700;
            font-size: 0.75rem;
            color: #64748b;
        }

        .rank-1 {
            background: #fefce8;
            color: #854d0e;
        }

        .rank-2 {
            background: #f1f5f9;
            color: #475569;
        }

        .rank-3 {
            background: #fff7ed;
            color: #9a3412;
        }

        .item-info {
            flex: 1;
            margin-left: 12px;
        }

        .item-name {
            font-weight: 600;
            font-size: 0.95rem;
            color: #1e293b;
            display: block;
        }

        .item-meta {
            font-size: 0.75rem;
            color: #94a3b8;
        }

        .item-value {
            text-align: right;
            font-family: 'Outfit', sans-serif;
            font-weight: 700;
            color: #1e293b;
        }

        .donut-container {
            height: 150px;
            margin-bottom: 1.25rem;
        }
    </style>

    <div class="dashboard-container">
        <div class="content-header">
            <h2 class="header-title">Executive Overview</h2>
            <a href="/admin/sales-report" class="btn-gold">
                <i class="fas fa-file-invoice"></i> Sales Report
            </a>
        </div>

        <!-- Top Summary Cards -->
        <div class="summary-grid">
            <div class="premium-card card-accent-revenue">
                <div class="card-icon-wrap icon-revenue">
                    <i class="fas fa-coins"></i>
                </div>
                <p class="card-label">Active Revenue</p>
                <h3 class="card-value">₹<%= activeRevenue.toLocaleString('en-IN') %>
                </h3>
            </div>
            <div class="premium-card card-accent-orders">
                <div class="card-icon-wrap icon-orders">
                    <i class="fas fa-truck-loading"></i>
                </div>
                <p class="card-label">Pending Orders</p>
                <h3 class="card-value">
                    <%= pendingOrders %>
                </h3>
            </div>
            <div class="premium-card card-accent-pending">
                <div class="card-icon-wrap icon-users">
                    <i class="fas fa-check-double"></i>
                </div>
                <p class="card-label">Completed Orders</p>
                <h3 class="card-value">
                    <%= completedOrders %>
                </h3>
            </div>
            <div class="premium-card card-accent-completed">
                <div class="card-icon-wrap icon-products">
                    <i class="fas fa-wallet"></i>
                </div>
                <p class="card-label">Total Revenue</p>
                <h3 class="card-value">₹<%= totalRevenue?.toLocaleString('en-IN') || '0' %>
                </h3>
            </div>
        </div>

        <!-- Secondary Stats -->
        <div class="summary-grid mb-5" style="grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));">
            <div class="premium-card">
                <p class="card-label">Total Orders</p>
                <h3 class="card-value" style="font-size: 1.25rem;">
                    <%= totalOrders?.toLocaleString('en-IN') || '0' %>
                </h3>
            </div>
            <div class="premium-card">
                <p class="card-label">Total Users</p>
                <h3 class="card-value" style="font-size: 1.25rem;">
                    <%= totalUsers?.toLocaleString('en-IN') || '0' %>
                </h3>
            </div>
            <div class="premium-card">
                <p class="card-label">Total Products</p>
                <h3 class="card-value" style="font-size: 1.25rem;">
                    <%= totalProducts?.toLocaleString('en-IN') || '0' %>
                </h3>
            </div>
        </div>

        <!-- Sales Analytics -->
        <div class="chart-section">
            <div class="chart-header">
                <h5 class="chart-title">Sales Analytics</h5>
                <div class="chart-filters">
                    <select id="chartFilter" class="premium-select">
                        <option value="yearly">Yearly</option>
                        <option value="monthly" selected>Monthly</option>
                        <option value="weekly">Weekly</option>
                        <option value="daily">Daily</option>
                    </select>
                    <select id="yearFilter" class="premium-select">
                        <!-- Populated dynamically -->
                    </select>
                </div>
            </div>
            <div class="chart-container">
                <canvas id="salesChart"></canvas>
            </div>
        </div>

        <!-- Top Performers -->
        <div class="top-grid">
            <!-- Top Products -->
            <div class="top-card">
                <h5 class="top-card-title"><i class="fas fa-trophy text-warning"></i> Best Selling Products</h5>
                <div class="donut-container">
                    <canvas id="topProductsChart"></canvas>
                </div>
                <div id="topProductsList">
                    <!-- Data here -->
                </div>
            </div>

            <!-- Top Categories -->
            <div class="top-card">
                <h5 class="top-card-title"><i class="fas fa-layer-group text-primary"></i> Top Categories</h5>
                <div class="donut-container">
                    <canvas id="topCategoriesChart"></canvas>
                </div>
                <div id="topCategoriesList">
                    <!-- Data here -->
                </div>
            </div>

            <!-- Top Brands -->
            <div class="top-card">
                <h5 class="top-card-title"><i class="fas fa-star text-info"></i> Dominant Brands</h5>
                <div class="donut-container">
                    <canvas id="topBrandsChart"></canvas>
                </div>
                <div id="topBrandsList">
                    <!-- Data here -->
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        (function () {
            var salesChart, topProductsChart, topCategoriesChart, topBrandsChart;
            var COLORS = ['#c5a059', '#1e293b', '#64748b', '#94a3b8', '#cbd5e1', '#f1f5f9'];

            window.initDashboard = function () {
                initCharts();

                // Populate Year Filter
                const yearSelect = document.getElementById('yearFilter');
                if (yearSelect) {
                    const currYear = new Date().getFullYear();
                    yearSelect.innerHTML = '';
                    for (let y = currYear; y >= currYear - 4; y--) {
                        yearSelect.innerHTML += `<option value="${y}">${y}</option>`;
                    }
                    yearSelect.onchange = window.updateDashboardData;
                }

                const chartFilter = document.getElementById('chartFilter');
                if (chartFilter) {
                    chartFilter.onchange = window.updateDashboardData;
                }
            };

            function initCharts() {
                const chartData = {
                    products: <% - JSON.stringify(topProducts || []) %>,
                    categories: <% - JSON.stringify(topCategories || []) %>,
                    brands: <% - JSON.stringify(topBrands || []) %>
                };

                const getDonutConfig = (labels, data) => ({
                    type: 'doughnut',
                    data: {
                        labels,
                        datasets: [{
                            data,
                            backgroundColor: COLORS,
                            borderWidth: 0,
                            hoverOffset: 10
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        cutout: '75%',
                        plugins: {
                            legend: { display: false }
                        }
                    }
                });

                const salesCtx = document.getElementById('salesChart');
                if (salesCtx) {
                    if (salesChart) salesChart.destroy();
                    salesChart = new Chart(salesCtx, {
                        type: 'line',
                        data: {
                            labels: <% - JSON.stringify(initialSalesData.labels) %>,
                            datasets: [{
                                label: 'Revenue',
                                data: <% - JSON.stringify(initialSalesData.data) %>,
                                borderColor: '#c5a059',
                                borderWidth: 3,
                                background: 'rgba(197, 160, 89, 0.1)',
                                fill: true,
                                tension: 0.4,
                                pointBackgroundColor: '#c5a059',
                                pointBorderColor: '#fff',
                                pointBorderWidth: 2,
                                pointRadius: 4,
                            }]
                        },
                        options: {
                            responsive: true,
                            maintainAspectRatio: false,
                            plugins: { legend: { display: false } },
                            scales: {
                                y: {
                                    beginAtZero: true,
                                    grid: { color: '#f1f5f9' },
                                    ticks: { callback: val => '₹' + val.toLocaleString('en-IN') }
                                },
                                x: { grid: { display: false } }
                            }
                        }
                    });
                }

                if (chartData.products.length && document.getElementById('topProductsChart')) {
                    if (topProductsChart) topProductsChart.destroy();
                    topProductsChart = new Chart(document.getElementById('topProductsChart'),
                        getDonutConfig(chartData.products.map(p => p.name), chartData.products.map(p => p.revenue)));
                    renderList('topProductsList', chartData.products);
                }

                if (chartData.categories.length && document.getElementById('topCategoriesChart')) {
                    if (topCategoriesChart) topCategoriesChart.destroy();
                    topCategoriesChart = new Chart(document.getElementById('topCategoriesChart'),
                        getDonutConfig(chartData.categories.map(c => c.name), chartData.categories.map(c => c.revenue)));
                    renderList('topCategoriesList', chartData.categories);
                }

                if (chartData.brands.length && document.getElementById('topBrandsChart')) {
                    if (topBrandsChart) topBrandsChart.destroy();
                    topBrandsChart = new Chart(document.getElementById('topBrandsChart'),
                        getDonutConfig(chartData.brands.map(b => b.name), chartData.brands.map(b => b.revenue)));
                    renderList('topBrandsList', chartData.brands, true);
                }
            }

            function renderList(id, data, isBrand = false) {
                const container = document.getElementById(id);
                if (!container) return;
                container.innerHTML = data.slice(0, 5).map((item, i) => `
                <div class="top-list-item">
                    <div class="item-rank rank-${i + 1}">${i + 1}</div>
                    <div class="item-info">
                        <span class="item-name">${item.name}</span>
                        <span class="item-meta">${isBrand ? item.totalOrderCount + ' Orders' : item.count + ' Units Sold'}</span>
                    </div>
                    <div class="item-value">₹${item.revenue.toLocaleString('en-IN')}</div>
                </div>
            `).join('');
            }

            window.updateDashboardData = async function () {
                const filter = document.getElementById('chartFilter').value;
                const yearFilterEl = document.getElementById('yearFilter');
                const year = yearFilterEl ? yearFilterEl.value : new Date().getFullYear();
                try {
                    const res = await fetch(`/admin/dashboard/sales-data?filter=${filter}&year=${year}`);
                    const data = await res.json();
                    if (salesChart) {
                        salesChart.data.labels = data.labels;
                        salesChart.data.datasets[0].data = data.data;
                        salesChart.update();
                    }
                } catch (err) { console.error(err); }
            };

            window.initDashboard();
        })();
    </script>

    <%- include("../partials/admin/footer") %>