<%- include("../../views/partials/user/header.ejs") %>

    <head>
        <link rel="stylesheet" href="/styles/profile.css">
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <style>
            .order-detail-container {
                max-width: 95%;
                margin: 40px auto;
                padding: 0 40px;
            }

            .order-header-section {
                background: var(--white);
                padding: 30px 40px;
                border: 1px solid var(--border-color);
                margin-bottom: 30px;
                display: flex;
                justify-content: space-between;
                align-items: center;
            }

            .order-id-large {
                font-family: var(--font-heading);
                font-size: 1.8rem;
                font-weight: 700;
                color: var(--primary-color);
                margin: 0;
            }

            .status-pill {
                padding: 8px 20px;
                border-radius: 4px;
                font-size: 0.85rem;
                font-weight: 600;
                text-transform: uppercase;
                letter-spacing: 1px;
            }

            .status-shipped {
                background: #e3f2fd;
                color: #1976d2;
            }

            .status-delivered {
                background: #e8f5e9;
                color: #2e7d32;
            }

            .status-cancelled {
                background: #ffebee;
                color: #c62828;
            }

            .status-pending {
                background: #fff3e0;
                color: #f57c00;
            }

            .status-processing {
                background: #e1f5fe;
                color: #0288d1;
            }

            .status-return {
                background: #f3e5f5;
                color: #7b1fa2;
            }

            .order-split-view {
                display: grid;
                grid-template-columns: 2fr 1fr;
                gap: 30px;
            }

            .order-items-card,
            .order-summary-card {
                background: var(--white);
                border: 1px solid var(--border-color);
                padding: 40px;
            }

            .order-item-row {
                display: flex;
                gap: 20px;
                padding: 25px 0;
                border-bottom: 1px solid var(--border-color);
                align-items: center;
            }

            .order-item-row:last-child {
                border-bottom: none;
            }

            .item-image {
                width: 100px;
                height: 120px;
                object-fit: cover;
                border: 1px solid var(--border-color);
            }

            .item-details {
                flex: 1;
            }

            .item-name {
                font-family: var(--font-heading);
                font-size: 1.1rem;
                font-weight: 600;
                margin-bottom: 5px;
                color: var(--primary-color);
            }

            .item-meta {
                color: var(--light-text);
                font-size: 0.9rem;
                margin-bottom: 10px;
            }

            .summary-title {
                font-family: var(--font-heading);
                font-size: 1.25rem;
                font-weight: 700;
                margin-bottom: 25px;
                padding-bottom: 15px;
                border-bottom: 1px solid var(--border-color);
                color: var(--primary-color);
            }

            .summary-row {
                display: flex;
                justify-content: space-between;
                margin-bottom: 15px;
                font-size: 0.95rem;
            }

            .summary-total {
                margin-top: 25px;
                padding-top: 20px;
                border-top: 2px solid var(--primary-color);
                font-family: var(--font-heading);
                font-size: 1.4rem;
                font-weight: 700;
                color: var(--primary-color);
            }

            .address-box {
                margin-top: 30px;
                padding: 25px;
                background: #fbfbfb;
                border: 1px solid var(--border-color);
            }

            .btn-action-small {
                padding: 6px 15px;
                font-size: 0.75rem;
                font-family: var(--font-heading);
                text-transform: uppercase;
                letter-spacing: 1px;
                border: 1px solid var(--border-color);
                background: transparent;
                cursor: pointer;
                transition: all 0.3s;
            }

            .btn-action-small:hover {
                background: var(--primary-color);
                color: white;
                border-color: var(--primary-color);
            }

            .btn-cancel {
                color: var(--danger-color);
                border-color: var(--danger-color);
            }

            .btn-cancel:hover {
                background: var(--danger-color);
                color: white;
            }

            .btn-return {
                color: var(--accent-color);
                border-color: var(--accent-color);
            }

            .btn-return:hover {
                background: var(--accent-color);
                color: var(--primary-color);
            }

            @media (max-width: 992px) {
                .order-split-view {
                    grid-template-columns: 1fr;
                }
            }
        </style>
    </head>

    <main class="main">
        <div class="breadcrumb-wrap">
            <div class="order-detail-container">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/">Home</a></li>
                        <li class="breadcrumb-item"><a href="/userProfile">My Account</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Order #<%= order.orderId %>
                        </li>
                    </ol>
                </nav>
            </div>
        </div>

        <div class="order-detail-container">
            <div class="order-header-section">
                <div>
                    <h1 class="order-id-large">Order #<%= order.orderId %>
                    </h1>
                    <p class="text-muted mt-2">Placed on <%= new Date(order.createdOn).toLocaleString() %>
                    </p>
                </div>
                <div class="d-flex align-items-center gap-3">
                    <span class="status-pill status-<%= order.status.toLowerCase().replace(' ', '-') %>">
                        <%= order.status %>
                    </span>
                    <button onclick="window.print()" class="btn-outline-gold px-3"><i class="fas fa-print"></i></button>
                </div>
            </div>

            <div class="order-split-view">
                <div class="order-items-card">
                    <h2 class="summary-title">Items Ordered</h2>
                    <% order.orderItems.forEach(item=> { %>
                        <div class="order-item-row" id="item-<%= item.product._id %>">
                            <img src="/uploads/re-image/<%= item.product.productImage[0] %>"
                                alt="<%= item.product.productName %>" class="item-image">
                            <div class="item-details">
                                <h3 class="item-name">
                                    <%= item.product.productName %>
                                </h3>
                                <div class="item-meta">
                                    <span>Quantity: <%= item.quantity %></span>
                                    <% if (item.variant) { %><span class="ms-3">Variant: <%= item.variant %></span>
                                        <% } %>
                                </div>
                                <div class="d-flex align-items-center gap-3">
                                    <span class="fw-bold text-dark">₹<%= item.price.toFixed(2) %></span>
                                    <span class="badge rounded-pill bg-light text-dark border"
                                        style="font-size: 0.7rem;">
                                        <%= item.status || order.status %>
                                    </span>
                                </div>
                            </div>
                            <div class="text-end" style="min-width: 150px;">
                                <div class="fw-bold mb-2">₹<%= (item.price * item.quantity).toFixed(2) %>
                                </div>

                                <% if (['Pending', 'Processing' ].includes(order.status) && item.status !=='Cancelled'
                                    && item.status !=='Returned' ) { %>
                                    <button onclick="cancelSingleProduct('<%= order._id %>', '<%= item.product._id %>')"
                                        class="btn-action-small btn-cancel">Cancel Item</button>
                                    <% } else if ((order.status==='Delivered' || item.status==='Delivered' ) &&
                                        !['Cancelled', 'Returned' , 'Return Request' ].includes(item.status)) { %>
                                        <button
                                            onclick="returnSingleProduct('<%= order._id %>', '<%= item.product._id %>')"
                                            class="btn-action-small btn-return">Return Item</button>

                                        <button
                                            onclick="openReviewModal('<%= item.product._id %>', '<%= item.product.productName %>', '<%= order._id %>')"
                                            class="btn-action-small ms-2"
                                            style="color: #28a745; border-color: #28a745;">Review Product</button>
                                        <% } %>

                                            <% if (item.status==='Cancelled' ) { %>
                                                <div class="text-danger small">Cancelled</div>
                                                <% } else if (item.status==='Return Request' ) { %>
                                                    <div class="text-warning small">Return Requested</div>
                                                    <% } else if (item.status==='Returned' ) { %>
                                                        <div class="text-success small">Returned</div>
                                                        <% } %>
                            </div>
                        </div>
                        <% }); %>

                            <div class="address-box mt-5">
                                <h3 class="summary-title"
                                    style="font-size: 1.1rem; border-bottom: none; margin-bottom: 15px;">Shipping
                                    Destination</h3>
                                <% if (address) { %>
                                    <div class="fw-bold text-dark mb-1">
                                        <%= address.name %>
                                    </div>
                                    <div class="text-muted small mb-2">
                                        <%= address.addressType %>
                                    </div>
                                    <div class="text-muted">
                                        <%= address.city %>, <%= address.state %>
                                                <%= address.pincode %><br>
                                                    <% if (address.landMark) { %>Landmark: <%= address.landMark %><br>
                                                            <% } %>
                                                                Phone: <%= address.phone %>
                                    </div>
                                    <% } %>
                            </div>
                </div>

                <div class="order-summary-card">
                    <h2 class="summary-title">Payment Summary</h2>
                    <div class="summary-row">
                        <span>Subtotal</span>
                        <span>₹<%= order.totalPrice.toFixed(2) %></span>
                    </div>
                    <% if (order.couponDiscount) { %>
                        <div class="summary-row text-success">
                            <span>Coupon (<%= order.couponCode %>)</span>
                            <span>-₹<%= order.couponDiscount.toFixed(2) %></span>
                        </div>
                        <% } %>
                            <div class="summary-row">
                                <span>Shipping</span>
                                <span>₹<%= (order.shippingCost || 0).toFixed(2) %></span>
                            </div>
                            <div class="summary-row">
                                <span>Tax</span>
                                <span>₹<%= (order.tax || 0).toFixed(2) %></span>
                            </div>
                            <div class="summary-row summary-total">
                                <span>Total</span>
                                <span>₹<%= order.finalAmount.toFixed(2) %></span>
                            </div>

                            <div class="mt-4 pt-4 border-top">
                                <div class="info-label mb-2">Payment Details</div>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="text-muted">Mode</span>
                                    <span class="badge-premium badge-success">
                                        <%= order.paymentMethod %>
                                    </span>
                                </div>
                                <div class="d-flex justify-content-between align-items-center mt-2">
                                    <span class="text-muted">Status</span>
                                    <span
                                        class="<%= order.paymentStatus.toLowerCase() === 'paid' ? 'text-success' : 'text-warning' %> fw-bold">
                                        <%= order.paymentStatus %>
                                    </span>
                                </div>
                            </div>

                            <%# Support for full order return if not handled per-item %>
                                <% if (order.status==='Delivered' && !order.returnedByUser) { %>
                                    <button onclick="returnOrderFull('<%= order._id %>')"
                                        class="btn-gold mt-4 w-100 text-center">Return Entire Order</button>
                                    <% } %>
                </div>
            </div>
        </div>
    </main>

    <!-- Review Modal -->
    <div class="modal fade" id="reviewModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-0 shadow-lg">
                <div class="modal-header bg-dark text-white">
                    <h5 class="modal-title font-heading">Product Review</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"
                        aria-label="Close"></button>
                </div>
                <div class="modal-body p-4">
                    <form id="reviewForm">
                        <input type="hidden" id="reviewProductId">
                        <input type="hidden" id="reviewOrderId">
                        <div class="mb-4">
                            <label class="form-label d-block mb-3">Rate your experience</label>
                            <div class="star-rating d-flex gap-2 fs-3">
                                <i class="far fa-star rating-star" data-rating="1"
                                    style="cursor: pointer; color: #ffd700;"></i>
                                <i class="far fa-star rating-star" data-rating="2"
                                    style="cursor: pointer; color: #ffd700;"></i>
                                <i class="far fa-star rating-star" data-rating="3"
                                    style="cursor: pointer; color: #ffd700;"></i>
                                <i class="far fa-star rating-star" data-rating="4"
                                    style="cursor: pointer; color: #ffd700;"></i>
                                <i class="far fa-star rating-star" data-rating="5"
                                    style="cursor: pointer; color: #ffd700;"></i>
                            </div>
                            <input type="hidden" id="reviewRating" value="0">
                        </div>
                        <div class="mb-3">
                            <label for="reviewComment" class="form-label">Your feedback</label>
                            <textarea class="form-control border-secondary" id="reviewComment" rows="4"
                                placeholder="Tell us what you liked or disliked..."></textarea>
                        </div>
                        <button type="submit"
                            class="btn btn-dark w-100 py-2 mt-3 text-uppercase letter-spacing-1">Submit Review</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <%- include("../../views/partials/user/footer.ejs") %>

        <script>
            async function cancelSingleProduct(orderId, productId) {
                const { value: reason } = await Swal.fire({
                    title: 'Cancel Item',
                    input: 'textarea',
                    inputLabel: 'Reason for cancellation',
                    inputPlaceholder: 'Please tell us why you are cancelling this item...',
                    inputAttributes: { 'aria-label': 'Cancellation reason' },
                    showCancelButton: true,
                    confirmButtonColor: '#1a1a1a',
                    cancelButtonColor: '#e74c3c'
                });

                if (reason) {
                    try {
                        const res = await fetch(`/orders/${orderId}/cancel`, {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify({ products: [{ productId, reason }] })
                        });
                        const data = await res.json();
                        if (data.success) {
                            Swal.fire('Cancelled!', 'Item cancelled successfully.', 'success').then(() => location.reload());
                        } else {
                            Swal.fire('Error', data.message || 'Failed to cancel item.', 'error');
                        }
                    } catch (err) {
                        Swal.fire('Error', 'Something went wrong.', 'error');
                    }
                }
            }

            async function returnSingleProduct(orderId, productId) {
                const { value: reason } = await Swal.fire({
                    title: 'Return Item',
                    input: 'textarea',
                    inputLabel: 'Reason for return',
                    inputPlaceholder: 'Please describe the issue...',
                    inputAttributes: { 'aria-label': 'Return reason' },
                    showCancelButton: true,
                    confirmButtonColor: '#1a1a1a',
                    cancelButtonColor: '#c5a059'
                });

                if (reason) {
                    try {
                        const res = await fetch(`/orders/${orderId}/return`, {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify({ products: [{ productId, reason }] })
                        });
                        const data = await res.json();
                        if (data.success) {
                            Swal.fire('Success!', 'Return request submitted.', 'success').then(() => location.reload());
                        } else {
                            Swal.fire('Error', data.message || 'Failed to submit return request.', 'error');
                        }
                    } catch (err) {
                        Swal.fire('Error', 'Something went wrong.', 'error');
                    }
                }
            }

            async function returnOrderFull(orderId) {
                // This could optionally call a bulk return endpoint or iterate all products
                window.location.href = `/return-reason/${orderId}`;
            }

            // Review Logic
            let reviewModal;
            document.addEventListener('DOMContentLoaded', () => {
                reviewModal = new bootstrap.Modal(document.getElementById('reviewModal'));

                // Star Rating logic
                const stars = document.querySelectorAll('.rating-star');
                stars.forEach(star => {
                    star.addEventListener('click', function () {
                        const rating = parseInt(this.getAttribute('data-rating'));
                        document.getElementById('reviewRating').value = rating;

                        stars.forEach((s, index) => {
                            if (index < rating) {
                                s.classList.remove('far');
                                s.classList.add('fas');
                            } else {
                                s.classList.remove('fas');
                                s.classList.add('far');
                            }
                        });
                    });
                });
            });

            function openReviewModal(productId, productName, orderId) {
                document.getElementById('reviewProductId').value = productId;
                document.getElementById('reviewOrderId').value = orderId;
                document.querySelector('#reviewModal .modal-title').textContent = `Review: ${productName}`;
                document.getElementById('reviewForm').reset();
                document.getElementById('reviewRating').value = 0;
                document.querySelectorAll('.rating-star').forEach(s => {
                    s.classList.remove('fas');
                    s.classList.add('far');
                });
                reviewModal.show();
            }

            document.getElementById('reviewForm').addEventListener('submit', async (e) => {
                e.preventDefault();
                const productId = document.getElementById('reviewProductId').value;
                const orderId = document.getElementById('reviewOrderId').value;
                const rating = document.getElementById('reviewRating').value;
                const comment = document.getElementById('reviewComment').value;

                if (rating == 0) {
                    return Swal.fire('Note', 'Please select a rating.', 'info');
                }
                if (!comment.trim()) {
                    return Swal.fire('Note', 'Please enter your feedback.', 'info');
                }

                try {
                    const res = await fetch('/submit-review', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ productId, orderId, rating, comment })
                    });
                    const data = await res.json();
                    if (data.success) {
                        reviewModal.hide();
                        Swal.fire('Thank You!', 'Your review has been submitted.', 'success');
                    } else {
                        Swal.fire('Error', data.message || 'Failed to submit review.', 'error');
                    }
                } catch (err) {
                    Swal.fire('Error', 'Something went wrong.', 'error');
                }
            });
        </script>