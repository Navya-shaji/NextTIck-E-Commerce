                                    <span class="review-date">
                                        <%= new Date(review.createdOn).toLocaleDateString() %>
                                    </span>
                                </div>
                                <div class="review-stars">
                                    <% for(let i=1; i<=5; i++) { %>
                                        <i class="<%= i <= review.rating ? 'fas' : 'far' %> fa-star"></i>
                                        <% } %>
                                </div>
                                <p class="review-comment">
                                    <%= review.comment %>
