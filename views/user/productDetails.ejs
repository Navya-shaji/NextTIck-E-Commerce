                                                            <span>Brand</span>
                                                            <span class="text-dark fw-bold">
                                                                <%= product.brand ? product.brand.brandName : 'Luxury'
                                                                    %>
                                                            </span>
                                                        </div>
                                                        <div class="d-flex justify-content-between mb-2">
                                                            <span>Category</span>
                                                            <span class="text-dark fw-bold">
                                                                <%= product.category ? product.category.name : 'Watches'
                                                                    %>
                                                            </span>
                                                        </div>
                                                        <% if (product.color) { %>
                                                            <div class="d-flex justify-content-between mb-2">
                                                                <span>Color</span>
                                                                <span class="text-dark fw-bold">
                                                                    <%= product.color %>
                                                                </span>
                                                            </div>
                                                            <% } %>
                                                                <div class="d-flex justify-content-between">
                                                                    <span>Movement</span>
                                                                    <span
                                                                        class="text-dark fw-bold">Automatic/Quartz</span>
                                                                </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                </div>
            </div>
        </div>

