    <script>
        // Image Handling
        function changeImage(src, element) {
            document.getElementById('mainImage').src = src;
            document.querySelectorAll('.thumbnail').forEach(thumb => thumb.classList.remove('active'));
            element.classList.add('active');

            // Update magnifier bg
            const glass = document.getElementById('magnifyingGlass');
            glass.style.backgroundImage = "url('" + src + "')";
        }

        // Magnifier Logic - Improved Lens Effect
        function magnify(e) {
            if (window.innerWidth <= 768) return;

            const container = document.getElementById('imageContainer');
            const img = document.getElementById('mainImage');
            const glass = document.getElementById('magnifyingGlass');

            // Show glass
            glass.style.display = 'block';

            // Get standard dimensions
            const rect = container.getBoundingClientRect();

            // Get cursor position relative to image container
            const x = e.clientX - rect.left;
            const y = e.clientY - rect.top;

            // Calculate ratios for background position (0% to 100%)
            let bgX = (x / rect.width) * 100;
            let bgY = (y / rect.height) * 100;

            // Clamp values
            bgX = Math.max(0, Math.min(100, bgX));
            bgY = Math.max(0, Math.min(100, bgY));

            // Calculate zoom properties
            const zoomLevel = 3;
            glass.style.backgroundImage = `url('${img.src}')`;
            glass.style.backgroundSize = `${rect.width * zoomLevel}px ${rect.height * zoomLevel}px`;
            glass.style.backgroundPosition = `${bgX}% ${bgY}%`;

            // Center the glass on cursor
            let glassX = x - (glass.offsetWidth / 2);
            let glassY = y - (glass.offsetHeight / 2);

            glass.style.left = `${glassX}px`;
            glass.style.top = `${glassY}px`;
        }

        function removeMagnify() {
            document.getElementById('magnifyingGlass').style.display = 'none';
        }

        // Quantity Logic
        function updateQuantity(change) {
            const input = document.getElementById('quantity');
            const max = parseInt(input.getAttribute('max'));
            let value = parseInt(input.value) + change;

            if (value >= 1 && value <= max) {
                input.value = value;
            }
        }

        // Cart Logic
        function addToCart(productId) {
            const quantity = document.getElementById('quantity') ? document.getElementById('quantity').value : 1;

            const button = document.querySelector('.btn-add-cart');
            const originalText = button.innerHTML;
            button.disabled = true;
            button.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Adding...';

            $.ajax({
                url: "/addToCart",
                method: "POST",
                data: { productId, quantity },
                success: (response) => {
                    if (response.success) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Added!',
                            text: 'Product successfully added to your bag',
                            showConfirmButton: false,
                            timer: 1500,
                            position: 'top-end',
                            toast: true
                        });
                        // Update cart count in header
                        if (response.cartCount !== undefined) {
                            $('.cart-count').text(response.cartCount);
                        }
                    } else {
                        Swal.fire({
                            icon: 'info',
                            title: 'Note',
                            text: response.message
                        });
                    }
                },
                error: (err) => {
                    const message = err.responseJSON ? err.responseJSON.message : "Something went wrong";
                    Swal.fire({
                        icon: 'error',
                        title: 'Oops...',
                        text: message
                    });
                },
                complete: () => {
                    button.disabled = false;
                    button.innerHTML = originalText;
                }
            });
        }

        function addToWishlist(productId) {
            $.ajax({
                url: '/addToWishlist',
                method: 'POST',
                data: { productId },
                success: (response) => {
                    if (response.status) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Saved!',
                            text: 'Added to your wishlist',
                            showConfirmButton: false,
                            timer: 1500,
                            toast: true,
                            position: 'top-end'
                        });
                    } else {
                        Swal.fire({
                            icon: 'info',
                            text: response.message
                        });
                    }
                },
                error: () => {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: 'Failed to add to wishlist'
                    });
                }
            });
        }
    </script>

