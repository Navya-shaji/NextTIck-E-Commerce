                                        <% } %>
                    </div>

                    <h1 class="product-title">
                        <%= product.productName %>
                    </h1>

                    <!-- Price Logic -->
                    <div class="price-wrapper">
                        <% const productOffer=product.productOffer || 0; const categoryOffer=category?.categoryOffer ||
                            0; const bestOffer=totalOffer || Math.max(productOffer, categoryOffer); const
                            regularPrice=product.salesPrice || 0; const discountAmount=regularPrice * (bestOffer / 100);
                            const salesPrice=regularPrice - discountAmount; %>

                            <span class="current-price">₹<%= salesPrice.toFixed(2) %></span>
                            <% if (bestOffer> 0) { %>
                                <span class="original-price">₹<%= regularPrice.toFixed(2) %></span>
                                <span class="discount-tag">
                                    <%= bestOffer %>% OFF
                                </span>
                                <% } %>
                    </div>

                    <% if (bestOffer> 0) { %>
                        <div class="best-offer-info">
                            <i class="fas fa-tag me-2"></i>
                            <% if (productOffer> categoryOffer) { %>
                                Special Product Offer Applied
                                <% } else { %>
                                    Category Offer Applied
                                    <% } %>
                        </div>
                        <% } %>

                            <div class="description-wrapper">
                                <p>
                                    <%= product.description %>
                                </p>
                            </div>

                            <% if (product.quantity> 0) { %>
