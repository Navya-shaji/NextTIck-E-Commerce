<%- include("../../views/partials/user/header.ejs") %>

    <head>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
        <link
            href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400;700&family=Outfit:wght@300;400;500;600;700&display=swap"
            rel="stylesheet">
        <style>
            :root {
                --primary-color: #1a1a1a;
                --secondary-color: #ffffff;
                --accent-color: #c5a059;
                --text-color: #2d2d2d;
                --light-text: #757575;
                --border-color: #eeeeee;
                --font-heading: 'Cinzel', serif;
                --font-body: 'Outfit', sans-serif;
            }

            body {
                background-color: #fcfcfc;
                font-family: var(--font-body);
                color: var(--text-color);
            }

            .wishlist-header-banner {
                background: #fff;
                padding: 60px 0;
                text-align: center;
                border-bottom: 1px solid var(--border-color);
                margin-bottom: 60px;
            }

            .wishlist-header-banner h1 {
                font-family: var(--font-heading);
                font-size: 2.5rem;
                letter-spacing: 4px;
                text-transform: uppercase;
                margin: 0;
            }

            .wishlist-main-container {
                max-width: 1300px;
                margin: 0 auto;
                padding: 0 40px 100px;
            }

            .wishlist-content-card {
                background: #fff;
                border: 1px solid var(--border-color);
                padding: 40px;
            }

            .wishlist-table-header {
                display: grid;
                grid-template-columns: 2fr 1.5fr 1fr 1fr;
                padding-bottom: 20px;
                border-bottom: 1px solid var(--border-color);
                font-family: var(--font-heading);
                font-size: 0.8rem;
                letter-spacing: 2px;
                text-transform: uppercase;
                color: var(--light-text);
            }

            .wishlist-item-row {
                display: grid;
                grid-template-columns: 2fr 1.5fr 1fr 1fr;
                align-items: center;
                padding: 30px 0;
                border-bottom: 1px solid var(--border-color);
                transition: 0.3s;
            }

            /* Premium Dropdown Styles */
            .action-dropdown {
                position: relative;
                display: inline-block;
            }

            .btn-action-trigger {
                background: #fff;
                border: 1px solid var(--border-color);
                padding: 10px 20px;
                font-family: var(--font-heading);
                font-size: 0.75rem;
                letter-spacing: 1px;
                text-transform: uppercase;
                cursor: pointer;
                display: flex;
                align-items: center;
                gap: 10px;
                transition: 0.3s;
                width: 100%;
                justify-content: center;
            }

            .btn-action-trigger:hover {
                border-color: var(--primary-color);
            }

            .dropdown-content {
                display: none;
                position: absolute;
                right: 0;
                background-color: #fff;
                min-width: 180px;
                box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
                border: 1px solid var(--border-color);
                z-index: 100;
            }

            .action-dropdown:hover .dropdown-content {
                display: block;
            }

            .dropdown-item {
                color: var(--text-color);
                padding: 12px 16px;
                text-decoration: none;
                display: block;
                font-size: 0.85rem;
                text-align: left;
                border: none;
                background: none;
                width: 100%;
                cursor: pointer;
                transition: 0.3s;
                font-family: var(--font-body);
            }

            .dropdown-item:hover {
                background-color: #f9f9f9;
                color: var(--accent-color);
            }

            .dropdown-item i {
                width: 20px;
            }

            .dropdown-item.remove {
                color: #ff4d4d;
            }

            .dropdown-item.remove:hover {
                background-color: #fff5f5;
            }

            .wishlist-item-info {
                display: flex;
                align-items: center;
                gap: 25px;
            }

            .wishlist-item-image {
                width: 100px;
                height: 120px;
                object-fit: cover;
                background: #fdfdfd;
                border: 1px solid var(--border-color);
                transition: transform 0.3s ease;
            }

            .wishlist-item-row:hover .wishlist-item-image {
                transform: scale(1.05);
            }

            .wishlist-item-details h3 {
                font-size: 1.1rem;
                margin: 0 0 5px 0;
                font-family: var(--font-heading);
                color: var(--primary-color);
            }

            .wishlist-item-details p {
                font-size: 0.85rem;
                color: var(--light-text);
                margin: 0;
            }

            .wishlist-item-price {
                font-size: 1rem;
                font-weight: 500;
            }

            /* Empty State */
            .empty-wishlist-state {
                text-align: center;
                padding: 80px 0;
            }

            .empty-wishlist-state i {
                color: #f0f0f0;
                margin-bottom: 30px;
            }

            .empty-wishlist-state h2 {
                font-family: var(--font-heading);
                letter-spacing: 3px;
                text-transform: uppercase;
                margin-bottom: 15px;
            }

            .empty-wishlist-state p {
                color: var(--light-text);
                margin-bottom: 40px;
            }

            @media (max-width: 992px) {
                .wishlist-table-header {
                    display: none;
                }

                .wishlist-item-row {
                    grid-template-columns: 1fr;
                    gap: 20px;
                    text-align: center;
                    position: relative;
                }

                .wishlist-item-info {
                    flex-direction: column;
                }

                .wishlist-item-row>div:not(.wishlist-item-info) {
                    border-top: 1px solid #f9f9f9;
                    padding-top: 10px;
                }

                .wishlist-item-cart-action {
                    max-width: 200px;
                    margin: 0 auto;
                }
            }
        </style>
    </head>

    <body>
        <div class="wishlist-header-banner">
            <h1>My Wishlist</h1>
        </div>

        <div class="wishlist-main-container">
            <div class="wishlist-content-card">
                <% if (wishlist.length> 0) { %>
                    <div class="wishlist-table-header">
                        <span>Product</span>
                        <span>Category & Brand</span>
                        <span>Price</span>
                        <span style="text-align: center;">Actions</span>
                    </div>

                    <div class="wishlist-items-list">
                        <% wishlist.forEach(item=> {
                            const product = item.productId;
                            %>
                            <div class="wishlist-item-row">
                                <div class="wishlist-item-info">
                                    <% if (product && product.productImage && product.productImage.length> 0) { %>
                                        <img src="/uploads/re-image/<%= product.productImage[0] %>"
                                            alt="<%= product.productName %>" class="wishlist-item-image"
                                            onerror="this.src='/images/pexels-brett-sayles-1186851.jpg'" />
                                        <% } else { %>
                                            <img src="/images/pexels-brett-sayles-1186851.jpg" alt="No Image"
                                                class="wishlist-item-image" />
                                            <% } %>
                                                <div class="wishlist-item-details">
                                                    <h3>
                                                        <%= product ? product.productName : 'Unknown Product' %>
                                                    </h3>
                                                    <p>Ref: <%= product ? product._id.toString().slice(-6).toUpperCase()
                                                            : 'N/A' %>
                                                    </p>
                                                </div>
                                </div>

                                <div class="wishlist-item-meta">
                                    <div style="font-size: 0.85rem; color: var(--light-text); line-height: 1.6;">
                                        <strong>Category:</strong>
                                        <%= product?.category?.name || 'N/A' %><br />
                                            <strong>Brand:</strong>
                                            <%= product?.brand || 'N/A' %>
                                    </div>
                                </div>

                                <div class="wishlist-item-price">
                                    â‚¹<%= product ? (product.salesPrice || product.regularPrice).toLocaleString()
                                        : '0.00' %>
                                </div>

                                <div class="wishlist-item-cart-action">
                                    <div class="action-dropdown">
                                        <button class="btn-action-trigger">
                                            Actions <i class="fas fa-chevron-down" style="font-size: 0.7rem;"></i>
                                        </button>
                                        <div class="dropdown-content">
                                            <% if (product && product.quantity> 0) { %>
                                                <button class="dropdown-item"
                                                    onclick="addToCartHandler(event, '<%= product._id.toString() %>')">
                                                    <i class="fas fa-shopping-bag"></i> Add to Bag
                                                </button>
                                                <% } else { %>
                                                    <button class="dropdown-item" disabled>Out of Stock</button>
                                                    <% } %>
                                                        <button class="dropdown-item remove"
                                                            onclick="removeFromWishlist('<%= product ? product._id.toString() : '' %>')">
                                                            <i class="fas fa-trash-alt"></i> Remove
                                                        </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <% }); %>
                    </div>
                    <% } else { %>
                        <div class="empty-wishlist-state">
                            <i class="fas fa-heart fa-6x"></i>
                            <h2>Your wishlist is empty</h2>
                            <p>Start curation of your favorite timepieces to see them here.</p>
                            <a href="/shop" class="btn-premium-action"
                                style="display: inline-block; width: auto; padding: 15px 50px; text-decoration: none;">Explore
                                Collection</a>
                        </div>
                        <% } %>
            </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script>
            function removeFromWishlist(productId) {
                if (!productId) return;

                Swal.fire({
                    title: "Remove Selection?",
                    text: "This item will be removed from your curated wishlist.",
                    icon: "question",
                    showCancelButton: true,
                    confirmButtonColor: "#1a1a1a",
                    cancelButtonColor: "#f4f4f4",
                    confirmButtonText: "Remove",
                    cancelButtonText: "Keep",
                    customClass: {
                        title: 'font-heading',
                    }
                }).then((result) => {
                    if (result.isConfirmed) {
                        fetch(`/wishlist/remove/${productId}`, {
                            method: "DELETE",
                            headers: { 'Content-Type': 'application/json' },
                        })
                            .then(res => res.json())
                            .then(data => {
                                if (data.success || data.status) {
                                    const Toast = Swal.mixin({
                                        toast: true,
                                        position: 'top-end',
                                        showConfirmButton: false,
                                        timer: 1500
                                    });
                                    Toast.fire({ icon: 'success', title: 'Removed from wishlist' });
                                    setTimeout(() => window.location.reload(), 1500);
                                }
                            })
                            .catch(() => {
                                Swal.fire({ icon: "error", title: "Error", text: "Something went wrong." });
                            });
                    }
                });
            }

            function addToCartHandler(event, productId) {
                event.preventDefault();
                const btn = event.target;
                btn.disabled = true;
                btn.innerText = "Processing...";

                fetch('/addToCart', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ productId: productId, quantity: 1 })
                })
                    .then(res => res.json())
                    .then(data => {
                        if (data.success) {
                            Swal.fire({
                                title: 'Timeless Addition',
                                text: 'Product successfully added to your bag.',
                                icon: 'success',
                                showConfirmButton: false,
                                timer: 1500
                            }).then(() => {
                                if (data.cartCount !== undefined) {
                                    document.querySelectorAll('.cart-count').forEach(el => el.textContent = data.cartCount);
                                }
                            });
                        } else {
                            throw new Error(data.message || 'Operation failed');
                        }
                    })
                    .catch(error => {
                        if (error.message.includes('login')) {
                            Swal.fire({
                                title: 'Restricted Access',
                                text: 'Please sign in to manage your bag.',
                                icon: 'info',
                                showCancelButton: true,
                                confirmButtonText: 'Sign In',
                                confirmButtonColor: '#1a1a1a'
                            }).then((r) => r.isConfirmed && (window.location.href = '/login'));
                        } else {
                            Swal.fire({ icon: 'info', title: 'Note', text: error.message });
                        }
                    })
                    .finally(() => {
                        btn.disabled = false;
                        btn.innerText = "Add to Cart";
                    });
            }
        </script>
    </body>

    <%- include("../../views/partials/user/footer") %>