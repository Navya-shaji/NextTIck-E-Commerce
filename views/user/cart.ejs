<%- include('../partials/user/header.ejs') %>

    <head>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
        <link
            href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400;700&family=Outfit:wght@300;400;500;600;700&display=swap"
            rel="stylesheet">
        <style>
            :root {
                --primary-color: #1a1a1a;
                --secondary-color: #ffffff;
                --accent-color: #c5a059;
                --text-color: #2d2d2d;
                --light-text: #757575;
                --border-color: #eeeeee;
                --font-heading: 'Cinzel', serif;
                --font-body: 'Outfit', sans-serif;
            }

            body {
                background-color: #fcfcfc;
                font-family: var(--font-body);
                color: var(--text-color);
            }

            .cart-header-banner {
                background: #fff;
                padding: 60px 0;
                text-align: center;
                border-bottom: 1px solid var(--border-color);
                margin-bottom: 60px;
            }

            .cart-header-banner h1 {
                font-family: var(--font-heading);
                font-size: 2.5rem;
                letter-spacing: 4px;
                text-transform: uppercase;
                margin: 0;
            }

            .cart-main-container {
                max-width: 1300px;
                margin: 0 auto;
                padding: 0 40px 100px;
            }

            /* Cart Content Table-like view */
            .cart-content-card {
                background: #fff;
                border: 1px solid var(--border-color);
                border-radius: 0;
                padding: 40px;
            }

            .cart-table-header {
                display: grid;
                grid-template-columns: 2fr 1fr 1fr 1fr 0.5fr;
                padding-bottom: 20px;
                border-bottom: 1px solid var(--border-color);
                font-family: var(--font-heading);
                font-size: 0.8rem;
                letter-spacing: 2px;
                text-transform: uppercase;
                color: var(--light-text);
            }

            .cart-item-row {
                display: grid;
                grid-template-columns: 2fr 1fr 1fr 1fr 0.5fr;
                align-items: center;
                padding: 30px 0;
                border-bottom: 1px solid var(--border-color);
                transition: 0.3s;
            }

            .cart-item-info {
                display: flex;
                align-items: center;
                gap: 25px;
            }

            .cart-item-image {
                width: 100px;
                height: 120px;
                object-fit: cover;
                background: #f9f9f9;
                border: 1px solid var(--border-color);
            }

            .cart-item-details h3 {
                font-size: 1.1rem;
                margin: 0 0 5px 0;
                font-family: var(--font-heading);
                color: var(--primary-color);
            }

            .cart-item-details p {
                font-size: 0.85rem;
                color: var(--light-text);
                margin: 0;
            }

            .cart-item-price,
            .cart-item-total {
                font-size: 1rem;
                font-weight: 500;
            }

            /* Quantity Controls */
            .quantity-stepper {
                display: flex;
                align-items: center;
                border: 1px solid var(--border-color);
                width: fit-content;
            }

            .quantity-stepper button {
                background: none;
                border: none;
                width: 35px;
                height: 35px;
                cursor: pointer;
                transition: 0.3s;
                display: flex;
                align-items: center;
                justify-content: center;
                color: var(--primary-color);
            }

            .quantity-stepper button:hover:not(:disabled) {
                background: var(--primary-color);
                color: #fff;
            }

            .quantity-stepper input {
                width: 40px;
                border: none;
                text-align: center;
                font-family: var(--font-body);
                font-weight: 600;
                background: transparent;
            }

            .quantity-stepper input::-webkit-inner-spin-button,
            .quantity-stepper input::-webkit-outer-spin-button {
                -webkit-appearance: none;
                margin: 0;
            }

            .remove-item-btn {
                background: none;
                border: none;
                color: #ff4d4d;
                cursor: pointer;
                font-size: 1.1rem;
                transition: 0.3s;
            }

            .remove-item-btn:hover {
                transform: scale(1.2);
            }

            /* Order Summary Card */
            .order-summary-premium {
                background: #fff;
                border: 1px solid var(--border-color);
                padding: 40px;
                position: sticky;
                top: 120px;
            }

            .order-summary-premium h2 {
                font-family: var(--font-heading);
                font-size: 1.3rem;
                text-transform: uppercase;
                letter-spacing: 2px;
                margin-bottom: 30px;
                border-bottom: 1px solid var(--border-color);
                padding-bottom: 15px;
            }

            .summary-row {
                display: flex;
                justify-content: space-between;
                margin-bottom: 20px;
                font-size: 0.95rem;
            }

            .summary-row.total {
                border-top: 1px solid var(--border-color);
                padding-top: 20px;
                margin-top: 20px;
                font-weight: 700;
                font-size: 1.2rem;
                color: var(--primary-color);
            }

            .checkout-btn-premium {
                width: 100%;
                padding: 18px;
                background: var(--primary-color);
                color: #fff;
                border: none;
                font-family: var(--font-heading);
                font-size: 0.85rem;
                letter-spacing: 2px;
                text-transform: uppercase;
                cursor: pointer;
                transition: 0.3s;
                margin-top: 20px;
            }

            .checkout-btn-premium:hover:not(:disabled) {
                background: var(--accent-color);
                color: var(--primary-color);
            }

            .checkout-btn-premium:disabled {
                background: #eee;
                color: #999;
                cursor: not-allowed;
            }

            .continue-link {
                display: block;
                text-align: center;
                margin-top: 20px;
                color: var(--light-text);
                text-decoration: none;
                font-size: 0.8rem;
                text-transform: uppercase;
                letter-spacing: 1px;
                transition: 0.3s;
            }

            .continue-link:hover {
                color: var(--accent-color);
            }

            /* Empty State */
            .empty-cart-state {
                text-align: center;
                padding: 80px 0;
            }

            .empty-cart-state i {
                color: #f0f0f0;
                margin-bottom: 30px;
            }

            .empty-cart-state h2 {
                font-family: var(--font-heading);
                letter-spacing: 3px;
                text-transform: uppercase;
                margin-bottom: 15px;
            }

            .empty-cart-state p {
                color: var(--light-text);
                margin-bottom: 40px;
            }

            @media (max-width: 992px) {
                .cart-grid {
                    display: block;
                }

                .order-summary-premium {
                    margin-top: 40px;
                }

                .cart-table-header {
                    display: none;
                }

                .cart-item-row {
                    grid-template-columns: 1fr;
                    gap: 20px;
                    text-align: center;
                }

                .cart-item-info {
                    flex-direction: column;
                }

                .quantity-stepper {
                    margin: 0 auto;
                }

                .cart-item-row>div:not(.cart-item-info) {
                    border-top: 1px solid #f9f9f9;
                    padding-top: 10px;
                }
            }
        </style>
    </head>

    <body>
        <div class="cart-header-banner">
            <h1>Your Bag</h1>
        </div>

        <div class="cart-main-container">
            <div class="row cart-grid">
                <div class="col-lg-8">
                    <div class="cart-content-card">
                        <% if (!products || products.length===0) { %>
                            <div class="empty-cart-state">
                                <i class="fas fa-shopping-bag fa-6x"></i>
                                <h2>Your bag is empty</h2>
                                <p>Discover our collection and find your next masterpiece.</p>
                                <a href="/shop" class="checkout-btn-premium"
                                    style="display: inline-block; width: auto; padding: 15px 50px; text-decoration: none;">Shop
                                    Timepieces</a>
                            </div>
                            <% } else { %>
                                <div class="cart-table-header">
                                    <span>Product</span>
                                    <span>Price</span>
                                    <span>Quantity</span>
                                    <span>Total</span>
                                    <span>Remove</span>
                                </div>

                                <div class="cart-items-list">
                                    <% products.forEach(item=> { %>
                                        <div class="cart-item-row" id="item-<%= item.productId._id %>">
                                            <div class="cart-item-info">
                                                <img src="/uploads/re-image/<%= item.productId.productImage[0] %>"
                                                    alt="<%= item.productId.productName %>" class="cart-item-image"
                                                    onerror="this.src='/images/pexels-brett-sayles-1186851.jpg'">
                                                <div class="cart-item-details">
                                                    <h3>
                                                        <%= item.productId.productName %>
                                                    </h3>
                                                    <p>SKU: <%= item.productId._id.toString().slice(-6).toUpperCase() %>
                                                    </p>
                                                    <% if (item.availableStock < 5) { %>
                                                        <span
                                                            style="color: #c5a059; font-size: 0.75rem; font-weight: 600; text-transform: uppercase;">Only
                                                            <%= item.availableStock %> Left
                                                        </span>
                                                        <% } %>
                                                </div>
                                            </div>

                                            <div class="cart-item-price">
                                                ₹<%= item.price.toLocaleString() %>
                                            </div>

                                            <div class="cart-item-quantity">
                                                <div class="quantity-stepper">
                                                    <button onclick="updateQuantity('<%= item.productId._id %>', -1)"
                                                        <%=item.quantity <=1 ? 'disabled' : '' %>>
                                                        <i class="fas fa-minus"></i>
                                                    </button>
                                                    <input type="number" value="<%= item.quantity %>" readonly>
                                                    <button onclick="updateQuantity('<%= item.productId._id %>', 1)"
                                                        <%=item.quantity>= item.maxAllowedQuantity ? 'disabled' : '' %>>
                                                        <i class="fas fa-plus"></i>
                                                    </button>
                                                </div>
                                            </div>

                                            <div class="cart-item-total">
                                                ₹<%= (item.price * item.quantity).toLocaleString() %>
                                            </div>

                                            <div class="cart-item-actions">
                                                <button class="remove-item-btn"
                                                    onclick="removeFromCart('<%= item.productId._id %>')">
                                                    <i class="far fa-trash-can"></i>
                                                </button>
                                            </div>
                                        </div>
                                        <% }); %>
                                </div>
                                <% } %>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="order-summary-premium">
                        <h2>Summary</h2>
                        <div class="summary-row">
                            <span>Subtotal</span>
                            <span>₹<%= totalAmount.toLocaleString() %></span>
                        </div>
                        <div class="summary-row">
                            <span>Shipping</span>
                            <span>Free</span>
                        </div>
                        <div class="summary-row" style="color: var(--accent-color); font-size: 0.85rem;">
                            <span>Waitlisted Items</span>
                            <span>Checked</span>
                        </div>

                        <div class="summary-row total">
                            <span>Estimated Total</span>
                            <span>₹<%= totalAmount.toLocaleString() %></span>
                        </div>

                        <button onclick="window.location.href='/checkout'" class="checkout-btn-premium" <%=!products ||
                            products.length===0 ? 'disabled' : '' %>>
                            Proceed to Checkout
                        </button>

                        <a href="/shop" class="continue-link">
                            <i class="fas fa-chevron-left me-2"></i>Continue Shopping
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script>
            async function updateQuantity(productId, change) {
                try {
                    const itemRow = document.querySelector(`#item-${productId}`);
                    const currentVal = parseInt(itemRow.querySelector('input').value);
                    const newVal = currentVal + change;

                    if (newVal < 1) return;

                    const response = await fetch('/cart/update-quantity', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ productId, quantity: newVal })
                    });

                    const data = await response.json();

                    if (data.success) {
                        const Toast = Swal.mixin({
                            toast: true,
                            position: 'top-end',
                            showConfirmButton: false,
                            timer: 1000
                        });
                        Toast.fire({ icon: 'success', title: 'Cart updated' });
                        setTimeout(() => location.reload(), 1000);
                    } else {
                        Swal.fire('Note', data.message || 'Limit reached', 'info');
                    }
                } catch (error) {
                    Swal.fire('Error', 'Failed to update quantity', 'error');
                }
            }

            async function removeFromCart(productId) {
                const result = await Swal.fire({
                    title: 'Remove Choice',
                    text: "Remove this masterpiece from your bag?",
                    icon: 'question',
                    showCancelButton: true,
                    confirmButtonColor: '#1a1a1a',
                    cancelButtonColor: '#eee',
                    confirmButtonText: 'Yes, remove',
                    cancelButtonText: 'Keep it',
                    customClass: {
                        title: 'cinzel-font',
                        popup: 'premium-swal'
                    }
                });

                if (result.isConfirmed) {
                    try {
                        const response = await fetch('/cart/remove', {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify({ productId })
                        });

                        const data = await response.json();
                        if (data.success) {
                            location.reload();
                        }
                    } catch (e) {
                        Swal.fire('Error', 'Action failed', 'error');
                    }
                }
            }
        </script>
    </body>

    <%- include('../partials/user/footer.ejs') %>