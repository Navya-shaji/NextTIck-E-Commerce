<%- include ("../../views/partials/user/header.ejs") %>

  <head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
      :root {
        --primary-color: #1a1a1a;
        --secondary-color: #f4f4f4;
        --accent-color: #c5a059;
        --text-color: #333;
        --light-text: #666;
        --white: #ffffff;
        --font-heading: 'Cinzel', serif;
        --font-body: 'Outfit', sans-serif;
      }

      body {
        font-family: var(--font-body);
        color: var(--text-color);
        background-color: var(--white);
        overflow-x: hidden;
      }

      /* Hero Section */
      .hero-section {
        position: relative;
        height: 90vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0.3)), url('/images/banner-bg.jpg') center/cover no-repeat;
        background-color: #1a1a1a;
        /* Fallback */
        color: var(--white);
        text-align: center;
      }

      .hero-content {
        z-index: 2;
        animation: fadeIn Up 1s ease-out;
      }

      .hero-subtitle {
        font-size: 1.2rem;
        letter-spacing: 4px;
        text-transform: uppercase;
        margin-bottom: 1rem;
        display: block;
        color: var(--accent-color);
      }

      .hero-title {
        font-family: var(--font-heading);
        font-size: 4.5rem;
        line-height: 1.1;
        margin-bottom: 2rem;
        font-weight: 400;
      }

      .hero-btn {
        display: inline-block;
        padding: 15px 40px;
        background-color: transparent;
        border: 1px solid var(--white);
        color: var(--white);
        text-decoration: none;
        font-family: var(--font-heading);
        text-transform: uppercase;
        letter-spacing: 2px;
        transition: all 0.3s ease;
        font-size: 0.9rem;
        border-radius: 30px;
      }

      .hero-btn:hover {
        background-color: var(--accent-color);
        border-color: var(--accent-color);
        color: var(--white);
      }

      /* Section Headers */
      .section-header {
        text-align: center;
        margin-bottom: 3rem;
      }

      .section-title {
        font-family: var(--font-heading);
        font-size: 2.5rem;
        color: var(--primary-color);
        margin-bottom: 1rem;
      }

      .section-subtitle {
        color: var(--light-text);
        font-size: 1rem;
        letter-spacing: 1px;
      }

      /* Collections/Products */
      .collections-section {
        padding: 5rem 0;
        background-color: var(--white);
      }

      .collection-nav {
        display: flex;
        justify-content: center;
        gap: 2rem;
        margin-bottom: 3rem;
      }

      .collection-btn {
        background: none;
        border: none;
        font-family: var(--font-body);
        font-size: 0.9rem;
        font-weight: 500;
        color: var(--light-text);
        cursor: pointer;
        padding-bottom: 5px;
        border-bottom: 2px solid transparent;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 1px;
      }

      .collection-btn.active,
      .collection-btn:hover {
        color: var(--primary-color);
        border-color: var(--accent-color);
      }

      .product-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 30px;
        padding: 0 15px;
      }

      .product-card {
        background: var(--white);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        position: relative;
        height: 100%;
      }

      .product-card:hover {
        transform: translateY(-5px);
      }

      .product-image-wrapper {
        position: relative;
        aspect-ratio: 1;
        overflow: hidden;
        background-color: #f9f9f9;
        margin-bottom: 15px;
        border-radius: 20px;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.05);
      }

      .product-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        /* Ensures image fills the square without distortion */
        transition: transform 0.5s ease;
        border-radius: 20px;
      }

      .product-card:hover .product-img {
        transform: scale(1.05);
      }

      .product-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.05);
        /* Subtle overlay on hover */
        opacity: 0;
        transition: opacity 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
      }

      .product-card:hover .product-overlay {
        opacity: 1;
      }

      .product-info {
        text-align: center;
        padding: 0 10px 20px;
      }

      .product-category {
        font-size: 0.75rem;
        text-transform: uppercase;
        color: var(--light-text);
        letter-spacing: 1px;
        margin-bottom: 5px;
        display: block;
      }

      .product-title {
        font-family: var(--font-heading);
        font-size: 1.1rem;
        color: var(--primary-color);
        margin-bottom: 8px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
      }

      .product-price {
        font-family: var(--font-body);
        font-size: 1rem;
        font-weight: 600;
        color: var(--accent-color);
      }

      .original-price {
        text-decoration: line-through;
        color: #999;
        margin-left: 8px;
        font-size: 0.9em;
        font-weight: 400;
      }

      /* Features Section */
      .features-section {
        padding: 4rem 0;
        background-color: #f9f9f9;
        border-top: 1px solid #eee;
      }

      .features-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 30px;
        text-align: center;
      }

      .feature-item {
        padding: 20px;
      }

      .feature-icon {
        font-size: 2rem;
        color: var(--accent-color);
        margin-bottom: 15px;
      }

      .feature-title {
        font-family: var(--font-heading);
        font-size: 1.2rem;
        margin-bottom: 10px;
        color: var(--primary-color);
      }

      .feature-desc {
        font-size: 0.9rem;
        color: var(--light-text);
        line-height: 1.6;
      }

      /* Newsletter */
      .newsletter-section {
        padding: 5rem 0;
        background-color: var(--primary-color);
        color: var(--white);
        text-align: center;
      }

      .newsletter-form {
        max-width: 500px;
        margin: 2rem auto 0;
        display: flex;
      }

      .newsletter-input {
        flex: 1;
        padding: 15px;
        border: 1px solid rgba(255, 255, 255, 0.2);
        background: transparent;
        color: var(--white);
        font-family: var(--font-body);
        outline: none;
        border-radius: 30px 0 0 30px;
        padding-left: 25px;
      }

      .newsletter-input::placeholder {
        color: rgba(255, 255, 255, 0.5);
      }

      .newsletter-btn {
        padding: 15px 30px;
        background-color: var(--accent-color);
        border: 1px solid var(--accent-color);
        color: var(--white);
        font-family: var(--font-heading);
        cursor: pointer;
        transition: all 0.3s ease;
        letter-spacing: 1px;
        border-radius: 0 30px 30px 0;
      }

      .newsletter-btn:hover {
        background-color: var(--white);
        color: var(--primary-color);
        border-color: var(--white);
      }

      /* Banner Carousel */
      .banner-carousel {
        position: relative;
        width: 100%;
        height: 90vh;
        overflow: hidden;
        background-color: var(--primary-color);
      }

      .banner-slide {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        opacity: 0;
        transition: opacity 1s ease-in-out;
        display: flex;
        align-items: center;
        justify-content: center;
      }

      .banner-slide.active {
        opacity: 1;
        z-index: 1;
      }

      .banner-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        filter: brightness(0.7);
      }

      .banner-content {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        text-align: center;
        color: var(--white);
        z-index: 2;
        max-width: 800px;
        padding: 0 20px;
      }

      .banner-title {
        font-family: var(--font-heading);
        font-size: 3.5rem;
        margin-bottom: 1rem;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
        animation: fadeInUp 1s ease-out;
      }

      .banner-description {
        font-size: 1.2rem;
        margin-bottom: 2rem;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
        animation: fadeInUp 1s ease-out 0.2s both;
      }

      .banner-btn {
        display: inline-block;
        padding: 15px 40px;
        background-color: var(--accent-color);
        border: 1px solid var(--accent-color);
        color: var(--white);
        text-decoration: none;
        font-family: var(--font-heading);
        text-transform: uppercase;
        letter-spacing: 2px;
        transition: all 0.3s ease;
        font-size: 0.9rem;
        animation: fadeInUp 1s ease-out 0.4s both;
        border-radius: 30px;
      }

      .banner-btn:hover {
        background-color: transparent;
        border-color: var(--white);
        color: var(--white);
      }

      .carousel-controls {
        position: absolute;
        bottom: 30px;
        left: 50%;
        transform: translateX(-50%);
        display: flex;
        gap: 10px;
        z-index: 3;
      }

      .carousel-dot {
        width: 12px;
        height: 12px;
        border-radius: 50%;
        background-color: rgba(255, 255, 255, 0.5);
        border: none;
        cursor: pointer;
        transition: all 0.3s ease;
      }

      .carousel-dot.active {
        background-color: var(--accent-color);
        transform: scale(1.2);
      }

      .carousel-arrow {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        background-color: rgba(255, 255, 255, 0.2);
        border: 1px solid rgba(255, 255, 255, 0.5);
        color: var(--white);
        width: 50px;
        height: 50px;
        border-radius: 50%;
        cursor: pointer;
        transition: all 0.3s ease;
        z-index: 3;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.2rem;
      }

      .carousel-arrow:hover {
        background-color: var(--accent-color);
        border-color: var(--accent-color);
      }

      .carousel-arrow.prev {
        left: 30px;
      }

      .carousel-arrow.next {
        right: 30px;
      }

      /* Animation helper */
      @keyframes fadeInUp {
        from {
          opacity: 0;
          transform: translateY(20px);
        }

        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      @media (max-width: 768px) {
        .banner-carousel {
          height: 50vh;
        }

        .banner-title {
          font-size: 2rem;
        }

        .banner-description {
          font-size: 1rem;
        }

        .carousel-arrow {
          width: 40px;
          height: 40px;
          font-size: 1rem;
        }

        .carousel-arrow.prev {
          left: 15px;
        }

        .carousel-arrow.next {
          right: 15px;
        }

        .hero-title {
          font-size: 2.5rem;
        }

        .product-grid {
          grid-template-columns: repeat(2, 1fr);
          gap: 15px;
        }

        .newsletter-form {
          flex-direction: column;
          gap: 10px;
        }
      }
    </style>
  </head>

  <% if (banners && banners.length> 0) { %>
    <!-- Banner Carousel -->
    <section class="banner-carousel">
      <% banners.forEach((banner, index)=> { %>
        <div class="banner-slide <%= index === 0 ? 'active' : '' %>" data-index="<%= index %>">
          <img src="/uploads/banners/<%= banner.image %>" alt="<%= banner.title %>" class="banner-image"
            onerror="this.src='/images/banner-bg.jpg'">
          <div class="banner-content">
            <h2 class="banner-title">
              <%= banner.title %>
            </h2>
            <p class="banner-description">
              <%= banner.description %>
            </p>
            <% if (banner.link) { %>
              <a href="<%= banner.link %>" class="banner-btn">Shop Now</a>
              <% } %>
          </div>
        </div>
        <% }); %>

          <% if (banners.length> 1) { %>
            <button class="carousel-arrow prev" onclick="changeBanner(-1)">
              <i class="fas fa-chevron-left"></i>
            </button>
            <button class="carousel-arrow next" onclick="changeBanner(1)">
              <i class="fas fa-chevron-right"></i>
            </button>

            <div class="carousel-controls">
              <% banners.forEach(function(banner, index) { %>
                <button class="carousel-dot <%= index === 0 ? 'active' : '' %>"
                  onclick="goToBanner(<%= index %>)"></button>
                <% }); %>
            </div>
            <% } %>
    </section>
    <% } else { %>
      <!-- Hero Section (shown when no banners) -->
      <section class="hero-section">
        <div class="hero-content">
          <span class="hero-subtitle">Est. 2024</span>
          <h1 class="hero-title">Timeless<br>Elegance</h1>
          <a href="#collections" class="hero-btn">Explore Collection</a>
        </div>
      </section>
      <% } %>

        <!-- Collections Section -->
        <section id="collections" class="collections-section">
          <div class="container">
            <div class="section-header">
              <h2 class="section-title">Exclusive Collections</h2>
              <p class="section-subtitle">Curated modern timepieces for the sophisticated.</p>
            </div>

            <div class="collection-nav" id="collectionNav">
              <button class="collection-btn active" data-filter="all">All</button>
            </div>

            <div class="product-grid">
              <% if (products && products.length> 0) { %>
                <% products.slice(0, 8).forEach((product, index)=> { %>
                  <div class="product-card" data-category="all">
                    <a href="/productDetails?id=<%= product._id %>" style="text-decoration: none;">
                      <div class="product-image-wrapper">
                        <% if (product.productImage && product.productImage[0] && product.productImage[0] !=='undefined'
                          ) { %>
                          <img src="/uploads/re-image/<%= product.productImage[0] %>" alt="<%= product.productName %>"
                            class="product-img" onerror="this.src='/images/pexels-brett-sayles-1186851.jpg'">
                          <% } else { %>
                            <img src="/images/pexels-brett-sayles-1186851.jpg" alt="<%= product.productName %>"
                              class="product-img">
                            <% } %>
                              <div class="product-overlay"></div>
                      </div>
                      <div class="product-info">
                        <% if(product.category) { %>
                          <span class="product-category">
                            <%= product.category.name %>
                          </span>
                          <% } %>
                            <h3 class="product-title">
                              <%= product.productName %>
                            </h3>
                            <div class="price-wrapper">
                              <% if (product.productOffer> 0 || (product.category && product.category.categoryOffer >
                                0)) {
                                const offer = Math.max(product.productOffer || 0, product.category?.categoryOffer || 0);
                                const discountedPrice = Math.round(product.salesPrice - (product.salesPrice * offer /
                                100));
                                %>
                                <span class="product-price">₹<%= discountedPrice.toLocaleString() %></span>
                                <span class="original-price">₹<%= product.salesPrice.toLocaleString() %></span>
                                <% } else { %>
                                  <span class="product-price">₹<%= product.salesPrice.toLocaleString() %></span>
                                  <% } %>
                            </div>
                      </div>
                    </a>
                  </div>
                  <% }); %>
                    <% } else { %>
                      <div class="col-12 text-center py-5">
                        <h3 class="text-muted">New Collection Dropping Soon</h3>
                      </div>
                      <% } %>
            </div>
          </div>
        </section>

        <!-- Features Section -->
        <section class="features-section">
          <div class="container">
            <div class="features-grid">
              <div class="feature-item">
                <i class="fas fa-shipping-fast feature-icon"></i>
                <h3 class="feature-title">Express Delivery</h3>
                <p class="feature-desc">Complimentary shipping on all premium orders worldwide.</p>
              </div>
              <div class="feature-item">
                <i class="fas fa-check-circle feature-icon"></i>
                <h3 class="feature-title">Authenticity Guaranteed</h3>
                <p class="feature-desc">Every timepiece is certified for 100% original craftsmanship.</p>
              </div>
              <div class="feature-item">
                <i class="fas fa-shield-alt feature-icon"></i>
                <h3 class="feature-title">Secure Warranty</h3>
                <p class="feature-desc">2-year international warranty on all our movements.</p>
              </div>
            </div>
          </div>
        </section>

        <!-- Newsletter Section -->
        <section class="newsletter-section">
          <div class="container">
            <h2 class="section-title" style="color: var(--white);">Join The Elite</h2>
            <p class="section-subtitle" style="color: rgba(255,255,255,0.7);">Subscribe for early access to
              limited
              releases.
            </p>
            <form class="newsletter-form"
              onsubmit="event.preventDefault(); Swal.fire('Subscribed!', 'Welcome to the club.', 'success');">
              <input type="email" class="newsletter-input" placeholder="Your email address" required>
              <button type="submit" class="newsletter-btn">SUBSCRIBE</button>
            </form>
          </div>
        </section>

        <%- include ("../../views/partials/user/footer.ejs") %>

          <!-- Scripts -->
          <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
          <script>
            // Banner Carousel Functionality
            let currentBannerIndex = 0;
            let bannerInterval;
            const bannerSlides = document.querySelectorAll('.banner-slide');
            const bannerDots = document.querySelectorAll('.carousel-dot');

            function showBanner(index) {
              if (bannerSlides.length === 0) return;

              // Remove active class from all slides and dots
              bannerSlides.forEach(slide => slide.classList.remove('active'));
              bannerDots.forEach(dot => dot.classList.remove('active'));

              // Add active class to current slide and dot
              bannerSlides[index].classList.add('active');
              if (bannerDots[index]) {
                bannerDots[index].classList.add('active');
              }
            }

            function changeBanner(direction) {
              currentBannerIndex += direction;

              if (currentBannerIndex >= bannerSlides.length) {
                currentBannerIndex = 0;
              } else if (currentBannerIndex < 0) {
                currentBannerIndex = bannerSlides.length - 1;
              }

              showBanner(currentBannerIndex);
              resetBannerInterval();
            }

            function goToBanner(index) {
              currentBannerIndex = index;
              showBanner(currentBannerIndex);
              resetBannerInterval();
            }

            function resetBannerInterval() {
              clearInterval(bannerInterval);
              if (bannerSlides.length > 1) {
                bannerInterval = setInterval(() => {
                  changeBanner(1);
                }, 5000); // Auto-rotate every 5 seconds
              }
            }

            // Initialize carousel
            if (bannerSlides.length > 0) {
              resetBannerInterval();
            }

            // Simple filter logic for demonstration (can be expanded)
            document.querySelectorAll('.collection-btn').forEach(btn => {
              btn.addEventListener('click', function () {
                document.querySelectorAll('.collection-btn').forEach(b => b.classList.remove('active'));
                this.classList.add('active');
                // Add actual filtering logic here if you have data attributes on products
              });
            });
          </script>