<%- include("../../views/partials/user/header.ejs") %>

  <head>
    <link rel="stylesheet" href="/styles/profile.css">
    <style>
      .otp-timer {
        font-family: var(--font-heading);
        font-weight: 700;
        font-size: 1.2rem;
        margin: 15px 0;
        color: var(--accent-color);
      }

      .resend-link {
        cursor: pointer;
        text-decoration: underline;
        color: var(--accent-color);
        font-weight: 600;
      }

      .resend-link.disabled {
        color: #ccc;
        cursor: not-allowed;
        text-decoration: none;
      }
    </style>
  </head>

  <main class="main">
    <div class="breadcrumb-wrap">
      <div class="profile-container">
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/userProfile">My Account</a></li>
            <li class="breadcrumb-item active" aria-current="page">Email Verification</li>
          </ol>
        </nav>
      </div>
    </div>

    <div class="profile-container">
      <div class="premium-form-card">
        <h4 class="card-title">Verify Your Email</h4>
        <p class="text-muted mb-4">A 6-digit verification code has been sent to your email address.</p>

        <form action="/verify-email-otp" method="post" id="otpForm">
          <div class="form-group">
            <label for="otp" class="info-label">Enter OTP</label>
            <input type="text" id="otp" name="otp" class="form-control text-center" maxlength="6"
              style="font-size: 2rem; letter-spacing: 10px; font-family: var(--font-body);" required>
          </div>

          <div class="otp-timer-wrapper mb-4">
            <div id="otpTimer" class="otp-timer">01:00</div>
            <p class="text-muted small">Code validity</p>
          </div>

          <div class="mt-4">
            <button type="submit" class="btn-gold">Verify & Update</button>
          </div>

          <% if (locals.message && message.length> 0) { %>
            <div class="alert alert-danger mt-4 text-center">
              <%= message %>
            </div>
            <% } %>
        </form>

        <div class="mt-4 pt-3 border-top">
          <p class="text-muted">Didn't receive the code? <span id="resendBtn" class="resend-link disabled"
              onclick="resendOTP()">Resend OTP</span></p>
        </div>
      </div>
    </div>
  </main>

  <%- include("../../views/partials/user/footer.ejs") %>

    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
      let timer = 60;
      let timerInterval;

      function startOTPTimer(duration) {
        timer = duration;
        const timerElement = document.getElementById('otpTimer');
        const resendBtn = document.getElementById('resendBtn');
        resendBtn.classList.add('disabled');

        clearInterval(timerInterval);
        timerInterval = setInterval(function () {
          const minutes = Math.floor(timer / 60);
          const seconds = timer % 60;
          timerElement.textContent = `${minutes}:${seconds < 10 ? '0' : ''}${seconds}`;

          if (--timer < 0) {
            clearInterval(timerInterval);
            timerElement.textContent = 'Expired';
            resendBtn.classList.remove('disabled');
          }
        }, 1000);
      }

      function resendOTP() {
        if ($('#resendBtn').hasClass('disabled')) return;

        $.ajax({
          type: 'POST',
          url: '/resend-otp',
          success: function (response) {
            if (response.success) {
              Swal.fire({
                icon: 'success',
                title: 'Resent',
                text: 'OTP has been resent to your email.',
                timer: 1500,
                showConfirmButton: false
              });
              startOTPTimer(60);
            } else {
              Swal.fire('Error', 'Failed to resend OTP', 'error');
            }
          }
        });
      }

      startOTPTimer(60);
    </script>